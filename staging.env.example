# AI Buzz Media - Staging Environment Configuration
# Copy this to .env.staging and update with your actual values

# Staging Site Configuration
STAGING_URL=https://your-staging-site.netlify.app
STAGING_SITE_ID=your-staging-site-id-here
PRODUCTION_URL=https://your-production-site.com

# Environment
NODE_ENV=staging

# Build Configuration
BUILD_TARGET=staging
COMPRESSION_LEVEL=medium
VERIFY_BACKUP=true

# Database (if using Sanity CMS)
SANITY_DATASET=staging
SANITY_PROJECT_ID=your-project-id

# Analytics (staging version)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Feature Flags (staging)
ENABLE_NEW_FEATURES=true
ENABLE_EXPERIMENTAL_UI=false
ENABLE_DEBUG_MODE=true

# Performance (staging)
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
LOG_LEVEL=debug

# Backup Configuration
BACKUP_DIR=./staging-backups
MAX_BACKUPS=5
COMPRESSION_LEVEL=medium
