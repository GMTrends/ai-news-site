---
// Compact newsletter subscription component for top placement
---

<section class="compact-subscribe">
  <div class="compact-container">
    <div class="compact-content">
      <div class="compact-icon-glow">
        <span class="icon-envelope">üìß</span>
      </div>
      <div class="compact-text">
        <h2>Unlock the Future of AI‚ÄîIn Your Inbox</h2>
        <p class="subheadline">Join thousands of innovators for weekly handpicked AI news, tools & strategies. No hype. No spam.</p>
        <ul class="subscribe-benefits">
          <li><span class="benefit-icon">‚úîÔ∏è</span> Actionable AI insights, not noise</li>
          <li><span class="benefit-icon">‚úîÔ∏è</span> Early access to guides & tools</li>
          <li><span class="benefit-icon">‚úîÔ∏è</span> Unsubscribe anytime</li>
        </ul>
      </div>
      <div class="divider"></div>
      <form class="subscribe-form" id="compactSubscribeForm">
        <input type="hidden" name="_csrf" id="compactSubscribeCsrfToken" />
        <div class="honeypot-field" style="display: none;">
          <input type="text" name="honeypot" id="compactSubscribeHoneypot" tabindex="-1" autocomplete="off" />
        </div>
        <div class="form-group">
          <input 
            type="email" 
            name="email"
            class="subscribe-input" 
            placeholder="Enter your email address"
            required
            autocomplete="email"
          />
          <button type="submit" class="subscribe-button">
            <span class="button-text">Subscribe</span>
            <span class="button-icon">üöÄ</span>
          </button>
        </div>
        <div class="form-message-container">
          <div class="form-message" id="compactSubscribeMessage"></div>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
.compact-subscribe {
  padding: 2.5rem 0 2rem 0;
  background: linear-gradient(135deg, rgba(0, 212, 255, 0.08) 0%, rgba(0, 102, 255, 0.04) 50%, rgba(168, 85, 247, 0.08) 100%);
  position: relative;
  overflow: hidden;
}
.compact-container {
  max-width: 680px;
  margin: 0 auto;
  padding: 0 1.5rem;
  position: relative;
  z-index: 2;
}
.compact-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(26, 26, 27, 0.97);
  backdrop-filter: blur(20px);
  border: 1.5px solid rgba(0, 212, 255, 0.18);
  border-radius: 22px;
  padding: 2.8rem 2.2rem 2.2rem 2.2rem;
  box-shadow: 0 8px 32px rgba(0, 212, 255, 0.10), 0 2px 8px rgba(0,0,0,0.10);
  position: relative;
  overflow: hidden;
}
.compact-icon-glow {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 1.5rem;
  margin-right: 0;
  position: relative;
}
.icon-envelope {
  font-size: 2.1rem;
  z-index: 2;
  position: relative;
  filter: drop-shadow(0 0 10px #00d4ff66);
  animation: envelope-float 2.5s ease-in-out infinite;
}
.compact-icon-glow::before {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 48px;
  height: 48px;
  transform: translate(-50%, -50%);
  background: radial-gradient(circle, rgba(0,212,255,0.13) 0%, rgba(0,212,255,0.06) 70%, transparent 100%);
  filter: blur(8px);
  z-index: 1;
  pointer-events: none;
  animation: glow-pulse 2.5s infinite alternate;
}
@keyframes envelope-float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-6px); }
}
@keyframes glow-pulse {
  0% { opacity: 0.7; }
  100% { opacity: 1; }
}
.compact-text {
  text-align: center;
  margin-bottom: 1.7rem;
}
.compact-text h2 {
  font-size: 2rem;
  font-weight: 800;
  background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin: 0 0 0.7rem 0;
  line-height: 1.18;
  letter-spacing: -0.5px;
}
.compact-text .subheadline {
  font-size: 1.13rem;
  color: #b3b3b3;
  margin: 0 0 1.1rem 0;
  font-weight: 500;
}
.subscribe-benefits {
  list-style: none;
  padding: 0;
  margin: 0 0 1.3rem 0;
  display: flex;
  flex-direction: column;
  gap: 0.7rem;
  font-size: 1.08rem;
  color: #00d4ff;
  font-weight: 500;
  align-items: center;
}
.benefit-icon {
  margin-right: 0.4em;
  font-size: 1.1em;
}
.divider {
  width: 100%;
  height: 1px;
  background: linear-gradient(90deg, rgba(0,212,255,0.12) 0%, rgba(0,212,255,0.02) 100%);
  margin: 1.5rem 0 1.7rem 0;
  border-radius: 1px;
}
.subscribe-form {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.subscribe-form .form-group {
  display: flex;
  width: 100%;
  gap: 0.9rem;
  margin: 0;
  justify-content: center;
}
.subscribe-form .subscribe-input {
  flex: 1 1 0%;
  min-width: 0;
  padding: 1rem 1.2rem;
  background: rgba(255, 255, 255, 0.07);
  border: 2px solid rgba(0, 212, 255, 0.13);
  border-radius: 10px;
  color: #ffffff;
  font-size: 1.13rem;
  transition: all 0.3s;
  font-family: inherit;
}
.subscribe-form .subscribe-input:focus {
  outline: none;
  border-color: #00d4ff;
  box-shadow: 0 0 20px rgba(0, 212, 255, 0.18);
  background: rgba(255, 255, 255, 0.13);
}
.subscribe-button {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: linear-gradient(90deg, #00d4ff 0%, #0066ff 100%);
  color: #fff;
  font-weight: 700;
  font-size: 1.13rem;
  border: none;
  border-radius: 10px;
  padding: 1rem 2.1rem;
  cursor: pointer;
  box-shadow: 0 4px 16px rgba(0,212,255,0.10);
  transition: background 0.3s, transform 0.2s, box-shadow 0.3s;
  position: relative;
  overflow: hidden;
}
.subscribe-button .button-icon {
  font-size: 1.2rem;
  transition: transform 0.2s;
}
.subscribe-button:hover {
  background: linear-gradient(90deg, #00d4ff 0%, #00ffa3 100%);
  transform: translateY(-2px) scale(1.06);
  box-shadow: 0 8px 32px rgba(0,212,255,0.18);
}
.subscribe-button:hover .button-icon {
  transform: scale(1.2) rotate(-8deg);
}
.form-message-container {
  min-height: 1.5rem;
  margin-top: 0.5rem;
}
.form-message {
  color: #00d4ff;
  font-size: 0.98rem;
  font-weight: 500;
  text-align: center;
}
@media (max-width: 900px) {
  .compact-container {
    max-width: 98vw;
    padding: 0 0.5rem;
  }
  .compact-content {
    padding: 1.5rem 0.7rem;
  }
  .compact-text h2 {
    font-size: 1.3rem;
  }
  .subscribe-form .form-group {
    flex-direction: column;
    gap: 0.7rem;
    align-items: stretch;
  }
  .subscribe-form .subscribe-input,
  .subscribe-button {
    width: 100%;
    font-size: 1rem;
    padding: 0.8rem 1.1rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('compactSubscribeForm') as HTMLFormElement;
  const button = form?.querySelector('.subscribe-button') as HTMLButtonElement;
  const input = form?.querySelector('.subscribe-input') as HTMLInputElement;
  const message = form?.querySelector('.form-message') as HTMLDivElement;
  const csrfTokenInput = document.getElementById('compactSubscribeCsrfToken') as HTMLInputElement;

  // Utility functions
  function showMessage(msg: string, type: 'success' | 'error') {
    if (message) {
      message.textContent = msg;
      message.className = `form-message ${type}`;
      message.style.display = 'block';
      
      // Auto-hide after 5 seconds
      setTimeout(() => {
        message.style.display = 'none';
      }, 5000);
    }
  }

  function setLoadingState(loading: boolean) {
    if (button && input) {
      if (loading) {
        button.classList.add('loading');
        button.disabled = true;
        input.disabled = true;
      } else {
        button.classList.remove('loading');
        button.disabled = false;
        input.disabled = false;
      }
    }
  }

  // Get CSRF token
  async function getCSRFToken() {
    try {
      const response = await fetch('/api/subscribe.json');
      const data = await response.json();
      return data.csrfToken;
    } catch (error) {
      console.error('Failed to get CSRF token:', error);
      return null;
    }
  }

  // Initialize form
  async function initializeForm() {
    if (form && csrfTokenInput) {
      // Get CSRF token
      const csrfToken = await getCSRFToken();
      if (csrfToken) {
        csrfTokenInput.value = csrfToken;
      }
    }
  }

  // Initialize on page load
  initializeForm();

  if (form) {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const email = input.value.trim();
      if (!email) {
        showMessage('Please enter your email address', 'error');
        return;
      }

      if (!isValidEmail(email)) {
        showMessage('Please enter a valid email address', 'error');
        return;
      }

      // Show loading state
      setLoadingState(true);

      try {
        // Prepare form data
        const formData = {
          email: email,
          honeypot: (document.getElementById('compactSubscribeHoneypot') as HTMLInputElement)?.value || '',
          _csrf: csrfTokenInput?.value || ''
        };

        const response = await fetch('/api/subscribe.json', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(formData)
        });

        const result = await response.json();

        // Update CSRF token if provided
        const newToken = response.headers.get('X-CSRF-Token');
        if (newToken && csrfTokenInput) {
          csrfTokenInput.value = newToken;
        }

        if (response.ok && result.success) {
          showMessage(result.message || 'Successfully subscribed!', 'success');
          input.value = '';
          
          // Get new CSRF token after successful submission
          const newCsrfToken = await getCSRFToken();
          if (newCsrfToken && csrfTokenInput) {
            csrfTokenInput.value = newCsrfToken;
          }
        } else {
          showMessage(result.error || 'Failed to subscribe. Please try again.', 'error');
        }
      } catch (error) {
        console.error('Subscribe error:', error);
        showMessage('Network error. Please check your connection and try again.', 'error');
      } finally {
        setLoadingState(false);
      }
    });
  }

  // Email validation function
  function isValidEmail(email: string): boolean {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
  }
});
</script> 