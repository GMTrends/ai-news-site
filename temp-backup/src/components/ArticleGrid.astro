---
import { getNews, getReviews, getTutorials, getBusiness, getFinance, getAIAgents, formatDate } from '../lib/sanity'

// Fetch 4 articles for each category
const newsArticles = await getNews(4)
const reviewsArticles = await getReviews(4) 
const tutorialsArticles = await getTutorials(4)
const businessArticles = await getBusiness(4)
const financeArticles = await getFinance(4)
const aiAgentsArticles = await getAIAgents(4)

// Fallback articles if needed
const createFallback = (category: string, count: number) => {
  return Array.from({ length: count }, (_, i) => ({
    title: `Create ${category} articles in your CMS`,
    category: category.toLowerCase(),
    excerpt: `Add published articles with category '${category}' to see them here`,
    publishedAt: new Date().toISOString(),
    author: { name: "System" },
    slug: { current: `${category.toLowerCase()}-${i}` },
    featuredImage: null
  }))
}

// Use real data or fallbacks
const newsToShow = newsArticles.length > 0 ? newsArticles.slice(0, 4) : createFallback('AI News', 4)
const reviewsToShow = reviewsArticles.length > 0 ? reviewsArticles.slice(0, 4) : createFallback('Reviews', 4)
const tutorialsToShow = tutorialsArticles.length > 0 ? tutorialsArticles.slice(0, 4) : createFallback('Tutorials', 4)
const businessToShow = businessArticles.length > 0 ? businessArticles.slice(0, 4) : createFallback('Business', 4)
const financeToShow = financeArticles.length > 0 ? financeArticles.slice(0, 4) : createFallback('Finance', 4)
const aiAgentsToShow = aiAgentsArticles.length > 0 ? aiAgentsArticles.slice(0, 4) : createFallback('AI Agents', 4)
