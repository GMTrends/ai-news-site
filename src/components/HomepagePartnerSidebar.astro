import UniversalPromo from './UniversalPromo.astro';

interface Props {
  categorySlug: string;
  currentArticleSlug?: string;
  className?: string;
  articles?: any[];
}

const { categorySlug, currentArticleSlug, className = '', articles = [] } = Astro.props;

// Smart related articles logic - avoid duplicating main grid articles
let filteredArticles: any[] = [];
if (Array.isArray(articles) && articles.length > 0) {
  // For homepage: skip first 5 articles (main grid), show next 3 for sidebar
  const mainGridCount = 5; // Number of articles shown in main grid (updated from 4 to 5)
  const sidebarArticles = articles.slice(mainGridCount, mainGridCount + 3);
  
  // Fallback: if not enough articles after main grid, show random articles from same category
  if (sidebarArticles.length < 3) {
    const remaining = 3 - sidebarArticles.length;
    // Get random articles from the same category as fallbacks
    const availableArticles = articles.filter((_, index) => index < mainGridCount);
    const shuffled = availableArticles.sort(() => 0.5 - Math.random());
    const fallbackArticles = shuffled.slice(0, remaining);
    filteredArticles = [...sidebarArticles, ...fallbackArticles];
  } else {
    filteredArticles = sidebarArticles;
  }
}

// Helper function to format dates
function formatDate(dateString: string) {
  if (!dateString) return '';
  try {
    return new Date(dateString).toLocaleDateString('en-US', { 
      month: 'short', 
      day: 'numeric' 
    });
  } catch {
    return '';
  }
}

// Helper function to get article URL
function getArticleUrl(article: any) {
  const category = article.category?.slug?.current || categorySlug;
  const slug = article.slug?.current || article.slug;
  return `/${category}/${slug}`;
}
