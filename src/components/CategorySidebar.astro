interface Props {
  categorySlug: string;
  currentArticleSlug?: string;
  className?: string;
  articles?: any[];
}


const { categorySlug, currentArticleSlug, className = '', articles = [] } = Astro.props;

// Smart related articles logic - avoid duplicating main grid articles
let filteredArticles: any[] = [];
if (Array.isArray(articles) && articles.length > 0) {
  // For category pages: skip first 8 articles (main grid), show next 3 for sidebar
  // For article pages: exclude current article, show first 3
  if (currentArticleSlug) {
    // Article page logic - exclude current article
    filteredArticles = articles.filter((a: any) => a.slug !== currentArticleSlug).slice(0, 3);
  } else {
    // Category page logic - skip main grid articles (first 8), show next 3
    const mainGridCount = 8; // Number of articles shown in main grid
    const sidebarArticles = articles.slice(mainGridCount, mainGridCount + 3);
    
    // Fallback: if not enough articles after main grid, show older articles
    if (sidebarArticles.length < 3) {
      // Mix: some from after main grid + some from beginning (marked as "More from category")
      const remaining = 3 - sidebarArticles.length;
      const fallbackArticles = articles.slice(0, remaining);
      filteredArticles = [...sidebarArticles, ...fallbackArticles];
    } else {
      filteredArticles = sidebarArticles;
    }
  }
}

