---
import { getFeaturedArticles } from '../lib/sanity';

// Fetch featured articles from Sanity
const featuredArticles = await getFeaturedArticles(5);

// Helper function to format date
function formatDate(dateString: string | undefined) {
  if (!dateString) return 'Recently'
  return new Date(dateString).toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'short', 
    day: 'numeric' 
  })
}

// Helper function to get article URL
function getArticleUrl(article: any) {
  const category = article.category?.slug?.current || 'articles'
  const slug = article.slug?.current || article.slug
  return `/${category}/${slug}`
}

const articlesToShow = featuredArticles.length > 0 ? featuredArticles : []
const mainArticle = articlesToShow[0]
const secondaryArticles = articlesToShow.slice(1, 5)
---

<section class="hero">
	<div class="hero-container">
		<div class="hero-content">
			<h1 class="hero-title">Latest AI Breakthroughs</h1>
			<p class="hero-subtitle">Stay ahead with breaking news, reviews, and insights from the world of artificial intelligence</p>
		</div>
		
		<div class="hero-grid">
			<!-- Main Featured Article -->
			{mainArticle && (
				<article class="main-featured">
					<div class="article-image-main">
						{mainArticle.featuredImage ? (
							<img 
								src={mainArticle.featuredImage} 
								alt={mainArticle.title}
								width="800"
								height="300"
								loading="eager"
							/>
						) : (
							<div class="placeholder-image-main">ðŸ¤–</div>
						)}
					</div>
					<div class="article-content-main">
						<span class="category-tag">
							{mainArticle.category?.name || 'Uncategorized'}
						</span>
						<h2><a href={getArticleUrl(mainArticle)}>{mainArticle.title}</a></h2>
						<p>{mainArticle.excerpt}</p>
						<div class="article-meta">
							<span class="author">By {mainArticle.author?.name || 'Anonymous'}</span>
							<span class="date">{formatDate(mainArticle.publishedAt)}</span>
						</div>
					</div>
				</article>
			)}

			<!-- Secondary Articles Grid -->
			<div class="secondary-grid">
				{secondaryArticles.map((article: any) => (
					<article class="secondary-article">
						<div class="article-image-small">
							{article.featuredImage ? (
								<img 
									src={article.featuredImage} 
									alt={article.title}
									width="80"
									height="80"
									loading="lazy"
								/>
							) : (
								<div class="placeholder-image-small">ðŸ“°</div>
							)}
						</div>
						<div class="article-content-small">
							<span class="category-tag-small">
								{article.category?.name || 'Uncategorized'}
							</span>
							<h3><a href={getArticleUrl(article)}>{article.title}</a></h3>
							<div class="article-meta-small">
								<span class="author">By {article.author?.name || 'Anonymous'}</span>
								<span class="date">{formatDate(article.publishedAt)}</span>
							</div>
						</div>
					</article>
				))}
			</div>
		</div>
	</div>
</section>

<style>
:root {
  --gradient-primary: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
  --gradient-bg: linear-gradient(135deg, rgba(0, 212, 255, 0.05) 0%, rgba(0, 102, 255, 0.05) 100%);
  --gradient-placeholder: linear-gradient(135deg, rgba(0, 212, 255, 0.2) 0%, rgba(0, 102, 255, 0.2) 100%);
  --color-text: #ffffff;
  --color-text-secondary: #b3b3b3;
  --color-bg: #1a1a1b;
  --border-color: rgba(255, 255, 255, 0.1);
}

.hero {
	background: var(--gradient-bg);
	padding: 1.2rem 0 2.5rem 0;
	margin-top: 0;
}

.hero-container {
	max-width: 1200px;
	margin: 0 auto;
	padding: 0 2rem;
}

.hero-content {
	text-align: center;
	margin-bottom: 1.5rem;
}

.hero-title {
	font-size: 3rem;
	font-weight: 700;
	margin-bottom: 1rem;
	background: var(--gradient-primary);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	background-clip: text;
}

.hero-subtitle {
	font-size: 1rem;
	color: var(--color-text-secondary);
	max-width: 600px;
	margin: 0 auto;
}

.hero-grid {
	display: grid;
	grid-template-columns: 2fr 1fr;
	gap: 2rem;
	margin-top: 2rem;
}

/* Common styles for articles */
.main-featured,
.secondary-article {
	background: var(--color-bg);
	backdrop-filter: blur(10px);
	border: 1px solid var(--border-color);
	border-radius: 16px;
	transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.main-featured {
	padding: 1.5rem;
}

.main-featured:hover {
	transform: translateY(-4px);
	box-shadow: 0 20px 60px rgba(0, 212, 255, 0.2);
}

.article-image-main {
	width: 100%;
	height: 300px;
	margin-bottom: 1.5rem;
	border-radius: 12px;
	overflow: hidden;
}

.article-image-main img {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

.placeholder-image-main {
	width: 100%;
	height: 100%;
	background: var(--gradient-placeholder);
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 4rem;
	border-radius: 12px;
}

.article-content-main h2 {
	font-size: 1.8rem;
	margin: 1rem 0;
	line-height: 1.2;
}

.article-content-main h2 a {
	color: var(--color-text);
	text-decoration: none;
	transition: color 0.3s ease;
}

.article-content-main h2 a:hover {
	color: #00d4ff;
}

.article-content-main p {
	color: var(--color-text-secondary);
	line-height: 1.6;
	margin-bottom: 1.5rem;
	font-size: 1rem;
}

/* Secondary Articles Grid */
.secondary-grid {
	display: flex;
	flex-direction: column;
	gap: 1rem;
}

.secondary-article {
	padding: 1rem;
	display: flex;
	gap: 1rem;
}

.secondary-article:hover {
	transform: translateX(4px);
	box-shadow: 0 8px 25px rgba(0, 212, 255, 0.15);
}

.article-image-small {
	width: 80px;
	height: 80px;
	border-radius: 8px;
	overflow: hidden;
	flex-shrink: 0;
}

.article-image-small img {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

.placeholder-image-small {
	width: 100%;
	height: 100%;
	background: var(--gradient-placeholder);
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 1.5rem;
	border-radius: 8px;
}

.article-content-small h3 {
	font-size: 0.95rem;
	margin: 0.25rem 0 0.5rem 0;
	line-height: 1.3;
}

.article-content-small h3 a {
	color: var(--color-text);
	text-decoration: none;
	transition: color 0.3s ease;
}

.article-content-small h3 a:hover {
	color: #00d4ff;
}

/* Common meta styles */
.article-meta,
.article-meta-small {
	color: var(--color-text-secondary);
	font-size: 0.9rem;
	display: flex;
	gap: 1rem;
}

.category-tag,
.category-tag-small {
	display: inline-block;
	padding: 0.25rem 0.75rem;
	background: var(--gradient-primary);
	color: var(--color-text);
	border-radius: 20px;
	font-size: 0.8rem;
	margin-bottom: 0.5rem;
}

@media (max-width: 768px) {
	.hero-grid {
		grid-template-columns: 1fr;
		gap: 1.5rem;
	}
	
	.hero-title {
		font-size: 2.2rem;
		line-height: 1.1;
	}
	
	.hero-subtitle {
		font-size: 0.95rem;
		padding: 0 1rem;
	}
	
	.hero-container {
		padding: 0 1rem;
	}
	
	.article-image-main {
		height: 200px;
	}
	
	.article-content-main h2 {
		font-size: 1.4rem;
		line-height: 1.3;
	}
	
	.article-content-main p {
		font-size: 0.9rem;
		line-height: 1.5;
	}
	
	.main-featured {
		padding: 1rem;
	}
	
	.secondary-article {
		padding: 0.75rem;
		gap: 0.75rem;
	}
	
	.article-image-small {
		width: 60px;
		height: 60px;
	}
	
	.article-content-small h3 {
		font-size: 0.9rem;
		line-height: 1.3;
	}
	
	.article-meta,
	.article-meta-small {
		font-size: 0.8rem;
		flex-direction: column;
		gap: 0.25rem;
		align-items: flex-start;
	}
}

@media (max-width: 480px) {
	.hero-title {
		font-size: 1.8rem;
	}
	
	.hero-subtitle {
		font-size: 0.9rem;
	}
	
	.article-image-main {
		height: 180px;
	}
	
	.article-content-main h2 {
		font-size: 1.2rem;
	}
	
	.article-content-main p {
		font-size: 0.85rem;
	}
	
	.secondary-article {
		padding: 0.5rem;
		gap: 0.5rem;
	}
	
	.article-image-small {
		width: 50px;
		height: 50px;
	}
	
	.article-content-small h3 {
		font-size: 0.85rem;
	}
	
	.category-tag,
	.category-tag-small {
		font-size: 0.7rem;
		padding: 0.2rem 0.6rem;
	}
}
</style>