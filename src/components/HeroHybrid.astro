						errorEl.style.display = 'block';
						errorEl.classList.add('convert-hero-email-success');
					}

					// Reset form after 4 seconds
					setTimeout(function() {
						isSuccess = false;
						if (emailInput) {
							emailInput.value = '';
							updateValidationUI(emailInput, { isValid: false, message: '' }, false);
						}
						if (btn) btn.removeAttribute('disabled');
						if (btnText) btnText.textContent = 'Get Instant Access (Free)';
						if (btnIcon) {
							btnIcon.innerHTML = '<svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg>';
						}
						if (errorEl) {
							errorEl.textContent = '';
							errorEl.style.display = 'none';
							errorEl.classList.remove('convert-hero-email-success');
						}
					}, 4000);
				} else {
