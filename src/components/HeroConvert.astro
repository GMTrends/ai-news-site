<script>
	// Mouse movement effect for radial gradient
	if (typeof window !== 'undefined') {
		document.addEventListener('mousemove', function(e) {
			const gradient = document.getElementById('convertHeroRadialGradient');
			if (gradient) {
				const x = (e.clientX / window.innerWidth) * 100;
				const y = (e.clientY / window.innerHeight) * 100;
				gradient.style.background = 'radial-gradient(circle at ' + x + '% ' + y + '%, rgba(6, 182, 212, 0.15) 0%, transparent 50%)';
			}
		});

		// Generate particles
		const particlesContainer = document.getElementById('convertHeroParticles');
		if (particlesContainer) {
			for (let i = 0; i < 20; i++) {
				const particle = document.createElement('div');
				particle.className = 'convert-hero-particle';
				particle.style.left = Math.random() * 100 + '%';
				particle.style.top = Math.random() * 100 + '%';
				particle.style.animationDuration = (10 + Math.random() * 20) + 's';
				particle.style.animationDelay = Math.random() * 5 + 's';
				particlesContainer.appendChild(particle);
			}
		}

		// Form submission
		let isSubmitting = false;
		let isSuccess = false;

		function handleSubmit() {
			const emailInput = document.getElementById('convertHeroEmailInput') as HTMLInputElement | null;
			const email = emailInput ? emailInput.value : '';
			if (!email || isSubmitting || isSuccess) return;

			isSubmitting = true;
			const btn = document.getElementById('convertHeroSubmitBtn');
			const btnText = document.getElementById('convertHeroBtnText');
			const btnIcon = document.getElementById('convertHeroBtnIcon');

			if (btnText) btnText.textContent = '';
			if (btnIcon) {
				btnIcon.innerHTML = '<div class="convert-hero-spinner"></div>';
			}

			// Simulate API call
			setTimeout(function() {
				isSubmitting = false;
				isSuccess = true;

				// Show success
				if (btnText) btnText.textContent = 'Success!';
				if (btnIcon) {
					btnIcon.innerHTML = '<svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>';
				}

				// Update spots remaining
				const spotsEl = document.getElementById('convertHeroSpotsRemaining');
				if (spotsEl) {
					const current = parseInt(spotsEl.textContent || '347');
					spotsEl.textContent = String(current - 1);
				}

				// Reset after 3 seconds
				setTimeout(function() {
					isSuccess = false;
