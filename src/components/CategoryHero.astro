---
export interface Props {
  category: string;
  title: string;
  description: string;
  icon: string;
  toolsCount: number;
  lastUpdated?: string;
  breadcrumbs?: Array<{ name: string; url: string }>;
}

const { 
  category, 
  title, 
  description, 
  icon, 
  toolsCount, 
  lastUpdated = "Weekly",
  breadcrumbs = [
    { name: "Home", url: "/" },
    { name: "Categories", url: "/categories" }
  ]
} = Astro.props;
---

<section class="category-hero">
  <div class="container">
    <!-- Breadcrumb Navigation -->
    <nav class="breadcrumb" aria-label="Breadcrumb">
      <ol class="breadcrumb-list">
        {breadcrumbs.map((crumb, index) => (
          <li class="breadcrumb-item">
            <a href={crumb.url} class="breadcrumb-link">{crumb.name}</a>
            {index < breadcrumbs.length && <span class="breadcrumb-separator">‚Ä∫</span>}
          </li>
        ))}
        <li class="breadcrumb-item current" aria-current="page">
          <span class="breadcrumb-current">{title}</span>
        </li>
      </ol>
    </nav>

    <!-- Enhanced Category Header -->
    <div class="category-header">
      <div class="category-visual">
        <div class="category-icon-large">
          <span class="icon">{icon}</span>
          <div class="icon-glow"></div>
        </div>
        <div class="category-illustration">
          <!-- Subtle background pattern -->
          <div class="pattern-dots"></div>
        </div>
      </div>
      
      <div class="category-info">
        <h1 class="category-title">{title}</h1>
        <p class="category-description">{description}</p>
        
        <!-- Quick Stats -->
        <div class="category-stats">
          <div class="stat-item">
            <span class="stat-icon">üîß</span>
            <span class="stat-text">{toolsCount}+ tools reviewed</span>
          </div>
          <div class="stat-item">
            <span class="stat-icon">üîÑ</span>
            <span class="stat-text">Updated {lastUpdated}</span>
          </div>
          <div class="stat-item">
            <span class="stat-icon">‚≠ê</span>
            <span class="stat-text">Expert curated</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.category-hero {
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  border-bottom: 1px solid #333;
  padding: 2rem 0 3rem 0;
  position: relative;
  overflow: hidden;
  /* CLEAN: Standard width without viewport issues */
  width: 100%;
  margin: 0;
  box-sizing: border-box;
  /* Remove any potential transforms or animations */
  transform: none;
  will-change: auto;
}

.category-hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 20%, rgba(0, 123, 255, 0.1) 0%, transparent 50%);
  pointer-events: none;
}

.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 1rem;
  position: relative;
  z-index: 1;
  width: 100%;
  max-width: min(1400px, calc(100vw - 2rem));
  box-sizing: border-box;
  /* FIXED: Prevent left-shifting and ensure proper centering */
  left: auto;
  right: auto;
  transform: none;
}

/* Breadcrumb Navigation */
.breadcrumb {
  margin-bottom: 2rem;
}

.breadcrumb-list {
  display: flex;
  align-items: center;
  list-style: none;
  margin: 0;
  padding: 0;
  font-size: 0.875rem;
}

.breadcrumb-item {
  display: flex;
  align-items: center;
}

.breadcrumb-link {
  color: #888;
  text-decoration: none;
  transition: color 0.2s ease;
}

.breadcrumb-link:hover {
  color: #007bff;
}

.breadcrumb-separator {
  margin: 0 0.5rem;
  color: #555;
  font-size: 0.75rem;
}

.breadcrumb-current {
  color: #fff;
  font-weight: 500;
}

/* Enhanced Category Header */
.category-header {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 2rem;
  align-items: center;
}

.category-visual {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-icon-large {
  position: relative;
  width: 120px;
  height: 120px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  border-radius: 24px;
  box-shadow: 0 8px 32px rgba(0, 123, 255, 0.3);
}

.category-icon-large .icon {
  font-size: 3rem;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
}

.icon-glow {
  position: absolute;
  top: -10px;
  left: -10px;
  right: -10px;
  bottom: -10px;
  background: linear-gradient(135deg, rgba(0, 123, 255, 0.2) 0%, rgba(0, 86, 179, 0.2) 100%);
  border-radius: 30px;
  filter: blur(8px);
  z-index: -1;
}

.category-illustration {
  position: absolute;
  top: -20px;
  left: -20px;
  right: -20px;
  bottom: -20px;
  z-index: -2;
}

.pattern-dots {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(circle at 2px 2px, rgba(255, 255, 255, 0.05) 1px, transparent 0);
  background-size: 20px 20px;
  border-radius: 40px;
}

.category-info {
  min-width: 0; /* Prevents flex item from overflowing */
}

.category-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: #fff;
  margin: 0 0 1rem 0;
  line-height: 1.2;
  background: linear-gradient(135deg, #fff 0%, #e0e0e0 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.category-description {
  font-size: 1.125rem;
  color: #ccc;
  margin: 0 0 2rem 0;
  line-height: 1.6;
  max-width: 600px;
}

/* Quick Stats */
.category-stats {
  display: flex;
  gap: 2rem;
  flex-wrap: wrap;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  backdrop-filter: blur(10px);
  /* REMOVED: transition causing layout shift on page load */
  /* transition: all 0.2s ease; */
}

.stat-item:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(0, 123, 255, 0.3);
  /* REMOVED: transform causing layout shift on page load */
  /* transform: translateY(-1px); */
}

.stat-icon {
  font-size: 1rem;
}

.stat-text {
  font-size: 0.875rem;
  font-weight: 500;
  color: #fff;
}

/* Responsive Design */
@media (max-width: 768px) {
  .category-hero {
    padding: 1.5rem 0 2rem 0;
  }
  
  .category-header {
    grid-template-columns: 1fr;
    gap: 1.5rem;
    text-align: center;
  }
  
  .category-icon-large {
    width: 80px;
    height: 80px;
  }
  
  .category-icon-large .icon {
    font-size: 2rem;
  }
  
  .category-title {
    font-size: 2rem;
  }
  
  .category-description {
    font-size: 1rem;
  }
  
  .category-stats {
    justify-content: center;
    gap: 1rem;
  }
  
  .stat-item {
    padding: 0.5rem 0.75rem;
  }
  
  .breadcrumb-list {
    font-size: 0.8rem;
  }
}

@media (max-width: 480px) {
  .category-stats {
    flex-direction: column;
    align-items: center;
  }
  
  .stat-item {
    width: 100%;
    max-width: 200px;
    justify-content: center;
  }
}
</style>
