---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import SearchBar from './SearchBar.astro';
import { getArticlesByCategory } from '../lib/sanity';
import { generateWebPUrl, generateResponsiveSrcSet } from '../utils/imageOptimization';

interface Props {
  categorySlug: string;
  currentArticleSlug: string;
  relatedArticles?: any[];
  categories?: any[];
}

const { categorySlug, currentArticleSlug } = Astro.props;
const relatedArticles = await getArticlesByCategory(categorySlug, 4);
const filteredArticles = relatedArticles.filter((a: any) => a.slug !== currentArticleSlug).slice(0, 3);
