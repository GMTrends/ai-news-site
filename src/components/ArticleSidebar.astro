<script>
  // Mobile Bottom Sheet Functionality
  const mobileFab = document.getElementById('mobileFab');
  const mobileBottomSheet = document.getElementById('mobileBottomSheet');
  const mobileSheetOverlay = document.getElementById('mobileSheetOverlay');
  
  function openMobileSheet() {
    if (mobileBottomSheet && mobileSheetOverlay) {
      mobileBottomSheet.classList.add('active');
      mobileSheetOverlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
  }
  
  function closeMobileSheet() {
    if (mobileBottomSheet && mobileSheetOverlay) {
      mobileBottomSheet.classList.remove('active');
      mobileSheetOverlay.classList.remove('active');
      document.body.style.overflow = '';
    }
  }
  
  if (mobileFab) {
    mobileFab.addEventListener('click', openMobileSheet);
  }
  
  if (mobileSheetOverlay) {
    mobileSheetOverlay.addEventListener('click', closeMobileSheet);
  }
  
  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mobileBottomSheet?.classList.contains('active')) {
      closeMobileSheet();
    }
  });
  
  // Social Sharing Functions
  function shareToTwitter() {
    const url = encodeURIComponent(window.location.href);
    const text = encodeURIComponent(document.title);
    window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank');
  }
  
  function shareToLinkedIn() {
    const url = encodeURIComponent(window.location.href);
    window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${url}`, '_blank');
  }
  
  function shareToFacebook() {
    const url = encodeURIComponent(window.location.href);
    window.open(`https://www.facebook.com/sharer/sharer.php?u=${url}`, '_blank');
  }
  
  function copyArticleLink() {
    navigator.clipboard.writeText(window.location.href).then(() => {
      // Show a subtle notification
      const notification = document.createElement('div');
      notification.textContent = 'Link copied to clipboard!';
      notification.style.cssText = `
