---
import { sanityClient } from '../lib/sanity.ts';

let sanityStatus = "Unknown";
let testData = null;
let errorMessage = null;

try {
  // Test basic Sanity connection
  const result = await sanityClient.fetch(`*[_type == "article"][0..2] {
    _id,
    title,
    "slug": slug.current
  }`);
  
  sanityStatus = "Connected ‚úÖ";
  testData = result;
} catch (error) {
  sanityStatus = "Failed ‚ùå";
  errorMessage = error instanceof Error ? error.message : String(error);
  console.error("Sanity connection test failed:", error);
}

const envVars = {
  PROJECT_ID: import.meta.env.VITE_SANITY_PROJECT_ID,
  DATASET: import.meta.env.VITE_SANITY_DATASET,
  API_VERSION: import.meta.env.VITE_SANITY_API_VERSION,
  USE_CDN: import.meta.env.VITE_SANITY_USE_CDN
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sanity Connection Test</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #0a0a0a;
      color: #ffffff;
      padding: 2rem;
      line-height: 1.6;
    }
    .container {
      max-width: 800px;
      margin: 0 auto;
    }
    .status-box {
      background: #1a1a1a;
      border: 1px solid #333;
      border-radius: 8px;
      padding: 1.5rem;
      margin: 1rem 0;
    }
    .success { border-color: #22c55e; }
    .error { border-color: #ef4444; }
    .env-var {
      background: #2a2a2a;
      padding: 0.5rem;
      border-radius: 4px;
      margin: 0.25rem 0;
      font-family: monospace;
    }
    .data-preview {
      background: #2a2a2a;
      padding: 1rem;
      border-radius: 4px;
      overflow-x: auto;
      white-space: pre-wrap;
      font-family: monospace;
      font-size: 0.9rem;
    }
    h1 { color: #4f46e5; }
    h2 { color: #10b981; }
  </style>
</head>
<body>
  <div class="container">
    <h1>üß™ Sanity Connection Test</h1>
    
    <div class={`status-box ${sanityStatus.includes('‚úÖ') ? 'success' : 'error'}`}>
      <h2>Connection Status: {sanityStatus}</h2>
      {errorMessage && (
        <div>
          <strong>Error:</strong> {errorMessage}
        </div>
      )}
    </div>

    <div class="status-box">
      <h2>Environment Variables</h2>
      <div class="env-var">PROJECT_ID: {envVars.PROJECT_ID || 'NOT SET'}</div>
      <div class="env-var">DATASET: {envVars.DATASET || 'NOT SET'}</div>
      <div class="env-var">API_VERSION: {envVars.API_VERSION || 'NOT SET'}</div>
      <div class="env-var">USE_CDN: {envVars.USE_CDN || 'NOT SET'}</div>
    </div>

    {testData && (
      <div class="status-box">
        <h2>Sample Data (First 3 Articles)</h2>
        <div class="data-preview">{JSON.stringify(testData, null, 2)}</div>
      </div>
    )}

    <div class="status-box">
      <h2>Next Steps</h2>
      <ul>
        <li>If connection failed, check your Sanity project settings</li>
        <li>Verify the project ID matches your Sanity dashboard</li>
        <li>Ensure your dataset exists and has published content</li>
        <li>Check if your Sanity project allows public read access</li>
      </ul>
    </div>

    <p><a href="/categories/marketing" style="color: #4f46e5;">‚Üê Back to Marketing Category</a></p>
  </div>
</body>
</html>
