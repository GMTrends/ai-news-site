---
// Simple test page to debug UniversalAd component execution
import UniversalAd from '../components/UniversalAd.astro';

console.log('Ad debug test page: Starting execution');
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ad Debug Test</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
        }
        .test-section {
            border: 2px solid #ddd;
            padding: 20px;
            margin: 20px 0;
            border-radius: 8px;
        }
        .test-title {
            background: #f0f0f0;
            padding: 10px;
            margin: -20px -20px 20px -20px;
            border-radius: 6px 6px 0 0;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>UniversalAd Component Debug Test</h1>
    
    <div class="test-section">
        <div class="test-title">Test 1: sidebar-premium-spotlight</div>
        <p>This should render the sidebar premium spotlight ad:</p>
        <UniversalAd adId="sidebar-premium-spotlight" />
    </div>
    
    <div class="test-section">
        <div class="test-title">Test 2: hero-premium-top</div>
        <p>This should render the hero premium top ad:</p>
        <UniversalAd adId="hero-premium-top" />
    </div>
    
    <div class="test-section">
        <div class="test-title">Test 3: leaderboard-main</div>
        <p>This should render the leaderboard main ad:</p>
        <UniversalAd adId="leaderboard-main" />
    </div>
    
    <div class="test-section">
        <div class="test-title">Test 4: non-existent-ad</div>
        <p>This should render a fallback ad (testing fallback logic):</p>
        <UniversalAd adId="non-existent-ad" />
    </div>
    
    <script>
        console.log('Ad debug test page: Client-side script loaded');
    </script>
</body>
</html>
