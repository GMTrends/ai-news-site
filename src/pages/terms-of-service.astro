<style>
  html, body {
    background: var(--color-bg);
    min-height: 100vh;
    margin: 0;
    padding: 0;
    width: 100%;
    box-sizing: border-box;
  }
  .legal-page {
    min-height: 100vh;
  }
  
  .legal-hero {
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.1) 0%, rgba(0, 102, 255, 0.1) 100%);
    padding: 4rem 0 2rem;
    text-align: center;
    border-bottom: 1px solid rgba(0, 212, 255, 0.2);
    margin: 0;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .page-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .page-subtitle {
    font-size: 1.1rem;
    color: var(--color-text-secondary);
  }
  
  .legal-content {
    padding: 4rem 0;
    background: var(--color-bg);
  }
  
  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .legal-article {
    background: rgba(30, 30, 31, 0.8);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 16px;
    padding: 3rem;
    box-shadow: 0 20px 50px rgba(0, 212, 255, 0.1);
  }
  
  .intro {
    font-size: 1.1rem;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
    line-height: 1.6;
  }
  
  h2 {
    font-size: 1.8rem;
    font-weight: 600;
    margin: 2.5rem 0 1rem;
    color: var(--color-text);
    border-bottom: 1px solid rgba(0, 212, 255, 0.3);
    padding-bottom: 0.5rem;
  }
  
  h2:first-of-type {
    margin-top: 0;
  }
  
  p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  ul {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }
  
  li {
    margin-bottom: 0.5rem;
  }
  
  strong {
    color: var(--color-text);
  }
  
  .contact-info {
    background: rgba(0, 212, 255, 0.1);
    border: 1px solid rgba(0, 212, 255, 0.3);
    border-radius: 8px;
    padding: 1.5rem;
    margin-top: 1rem;
  }
  
  .contact-info p {
    margin-bottom: 0.5rem;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }
    
    .legal-article {
      padding: 2rem;
    }
    
    .container {
      padding: 0 1rem;
    }
    
    h2 {
      font-size: 1.5rem;
    }
  }
</style> 