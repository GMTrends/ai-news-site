---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, authorName = 'AI Buzz Media', authorSlug } = Astro.props;

// Debug: Log the heroImage value on the server
console.log('BlogPost.astro: heroImage received:', heroImage);

// Ensure dates are Date objects
const pubDateObj = typeof pubDate === 'string' ? new Date(pubDate) : pubDate;
const updatedDateObj = typeof updatedDate === 'string' ? new Date(updatedDate) : updatedDate;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={heroImage} />
		<style>
			/* Modern Article Layout Styles */
			:root {
				--content-max-width: 1200px; /* Use same max-width for image and content */
				--content-width: 80%; /* Increased from 75% for review articles */
				--sidebar-width: 20%; /* Reduced from 25% to accommodate wider content */
				--content-padding: 2rem;
				--mobile-padding: 1rem;
				--line-height: 1.7;
				--heading-line-height: 1.3;
				--font-size-base: 1.06rem; /* Reduced from 1.1rem for better readability */
				--font-size-large: 1.2rem; /* Slightly reduced to maintain proportion */
				--color-text: #2d3748;
				--color-text-light: #fff;
				--color-border: #e2e8f0;
				--color-background: #ffffff;
				--color-accent: #3182ce;
			}

			body {
				margin: 0;
				padding: 0;
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				line-height: var(--line-height);
				color: var(--color-text);
				background-color: var(--bg-primary) !important;
			}

			main {
				width: 100%;
				max-width: var(--content-max-width);
				margin: 0 auto;
				padding: 0 var(--content-padding);
			}

			.article-wrapper {
				max-width: var(--content-max-width);
				margin: 0 auto;
				width: 100%;
				padding: 0 var(--content-padding);
			}

			/* Hero Image Styles */
			.hero-image {
				width: 100%;
				max-width: 100%;
				margin: 0 auto 0 auto;
				position: relative;
				border-radius: 12px;
				overflow: hidden;
				box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
				height: 420px;
				display: flex;
				align-items: flex-end;
			}

			.hero-image img {
				position: absolute;
				top: 0; left: 0; width: 100%; height: 100%;
				object-fit: cover;
				z-index: 1;
				transition: opacity 0.7s cubic-bezier(0.4, 0, 0.2, 1);
				opacity: 1;
			}

			.hero-overlay {
				position: absolute;
				top: 0; left: 0; width: 100%; height: 100%;
				z-index: 1;
				background: linear-gradient(180deg, rgba(0,0,0,0.10) 0%, rgba(0,0,0,0.45) 55%, rgba(0,0,0,0.10) 100%);
				pointer-events: none;
			}

			.hero-text {
				position: relative;
				z-index: 2;
				padding: 2.5rem 2.5rem 2.5rem 2.5rem;
				color: var(--color-text-light);
				width: 100%;
				box-sizing: border-box;
				display: flex;
				flex-direction: column;
				align-items: center;
			}

			.hero-title {
				font-size: 2.8rem;
				font-weight: 800;
				line-height: 1.15;
				margin: 0 0 1.2rem 0;
				text-shadow: 0 2px 8px rgba(0,0,0,0.18);
				background: linear-gradient(90deg, #00e0ff 0%, #3182ce 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
				color: transparent;
				display: block;
				text-align: center;
			}

			.hero-meta {
				display: flex;
				gap: 1.5rem;
				align-items: center;
				font-size: 1.08rem;
				color: #e2e8f0;
				text-shadow: 0 2px 8px rgba(0,0,0,0.45);
				margin-bottom: 0.2rem;
				flex-wrap: wrap;
			}
			.hero-meta .meta-item {
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}
			.hero-meta .meta-dot {
				height: 6px; width: 6px; border-radius: 50%; background: #fff; opacity: 0.5; margin: 0 0.5rem;
			}

			/* Article Container */
			.article-container {
				display: flex;
				gap: 3rem;
				align-items: flex-start;
				margin-top: 2rem;
				width: 100%;
			}

			/* Main Content Area */
			.article-content {
				flex: 1 1 0;
				min-width: 0;
				max-width: 800px;
				width: 100%;
			}

			/* Article Header */
			.article-header {
				margin-bottom: 3rem;
				text-align: left;
			}

			.article-title {
				font-size: 2.5rem;
				font-weight: 700;
				line-height: var(--heading-line-height);
				margin: 0 0 1rem 0;
				color: var(--color-text);
			}

			.article-meta {
				display: flex;
				align-items: center;
				gap: 1rem;
				margin-bottom: 2rem;
				padding-bottom: 1.5rem;
				border-bottom: 1px solid var(--color-border);
			}

			.author-info {
				display: flex;
				align-items: center;
				gap: 0.75rem;
			}

			.author-avatar {
				width: 48px;
				height: 48px;
				border-radius: 50%;
				overflow: hidden;
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				display: flex;
				align-items: center;
				justify-content: center;
				color: white;
				font-weight: 600;
				font-size: 1.2rem;
			}

			.author-avatar img {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}

			.author-details {
				display: flex;
				flex-direction: column;
				gap: 0.25rem;
			}

			.author-name {
				font-weight: 600;
				color: var(--color-text);
			}

			.author-name a {
				color: var(--color-accent);
				text-decoration: none;
				transition: color 0.2s ease;
			}

			.author-name a:hover {
				color: #2c5282;
			}

			.publish-date {
				font-size: 0.9rem;
				color: var(--color-text-light);
			}

			/* Article Body */
			.article-body {
				font-size: var(--font-size-base);
				line-height: var(--line-height);
			}

			.article-body h1,
			.article-body h2,
			.article-body h3,
			.article-body h4,
			.article-body h5,
			.article-body h6 {
				margin: 2.5rem 0 1rem 0;
				font-weight: 600;
				line-height: var(--heading-line-height);
				color: var(--color-text);
			}

			.article-body h1 { font-size: 2rem; }
			.article-body h2 { font-size: 1.75rem; }
			.article-body h3 { font-size: 1.5rem; }
			.article-body h4 { font-size: 1.25rem; }

			.article-body p {
				margin: 0 0 1.5rem 0;
				font-size: var(--font-size-base);
				line-height: var(--line-height);
			}

			.article-body strong {
				font-weight: 600;
				color: var(--color-text);
			}

			.article-body em {
				font-style: italic;
			}

			.article-body code {
				background-color: #f7fafc;
				padding: 0.2rem 0.4rem;
				border-radius: 4px;
				font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
				font-size: 0.9em;
				color: #e53e3e;
			}

			.article-body blockquote {
				margin: 2rem 0;
				padding: 1.5rem 2rem;
				border-left: 4px solid var(--color-accent);
				background-color: #f7fafc;
				border-radius: 0 8px 8px 0;
				font-style: italic;
				font-size: var(--font-size-large);
			}

			.article-body figure {
				margin: 2rem 0;
				text-align: center;
			}

			.article-body figure img {
				max-width: 100%;
				height: auto;
				border-radius: 8px;
				box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
			}

			.article-body figcaption {
				margin-top: 0.5rem;
				font-size: 0.9rem;
				color: var(--color-text-light);
				font-style: italic;
			}

			/* Review Article Specific Styles */
			.article-body table {
				width: 100%;
				margin: 2rem 0;
				border-collapse: collapse;
				border-radius: 8px;
				overflow: hidden;
				box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
				background: white;
			}

			.article-body table th,
			.article-body table td {
				padding: 1rem;
				text-align: left;
				border-bottom: 1px solid var(--color-border);
			}

			.article-body table th {
				background-color: #f8fafc;
				font-weight: 600;
				color: var(--color-text);
				font-size: 0.95rem;
			}

			.article-body table tr:hover {
				background-color: #f7fafc;
			}

			.article-body table tr:last-child td {
				border-bottom: none;
			}

			/* Comparison Charts and Data Visualization */
			.article-body .comparison-chart {
				margin: 3rem 0;
				padding: 2rem;
				background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
				border-radius: 12px;
				border: 1px solid var(--color-border);
			}

			.article-body .chart-container {
				width: 100%;
				max-width: 100%;
				overflow-x: auto;
				margin: 1rem 0;
			}

			.article-body .chart-container img,
			.article-body .chart-container svg {
				width: 100%;
				height: auto;
				border-radius: 8px;
			}

			/* Feature Comparison Tables */
			.article-body .feature-table {
				margin: 3rem 0;
			}

			.article-body .feature-table table {
				font-size: 0.95rem;
			}

			.article-body .feature-table th:first-child {
				min-width: 200px;
			}

			/* Pros and Cons Lists */
			.article-body .pros-cons {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 2rem;
				margin: 2rem 0;
			}

			.article-body .pros,
			.article-body .cons {
				padding: 1.5rem;
				border-radius: 8px;
			}

			.article-body .pros {
				background-color: #f0fff4;
				border: 1px solid #9ae6b4;
			}

			.article-body .cons {
				background-color: #fff5f5;
				border: 1px solid #feb2b2;
			}

			.article-body .pros h3 {
				color: #22543d;
				margin-top: 0;
			}

			.article-body .cons h3 {
				color: #742a2a;
				margin-top: 0;
			}

			.article-body .pros ul,
			.article-body .cons ul {
				margin: 1rem 0 0 0;
				padding-left: 1.5rem;
			}

			.article-body .pros li,
			.article-body .cons li {
				margin-bottom: 0.5rem;
			}

			/* Rating and Score Displays */
			.article-body .rating-display {
				display: flex;
				align-items: center;
				gap: 1rem;
				margin: 2rem 0;
				padding: 1.5rem;
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				border-radius: 12px;
				color: white;
			}

			.article-body .rating-score {
				font-size: 3rem;
				font-weight: 700;
				line-height: 1;
			}

			.article-body .rating-details {
				flex: 1;
			}

			.article-body .rating-label {
				font-size: 1.1rem;
				font-weight: 600;
				margin-bottom: 0.5rem;
			}

			.article-body .rating-description {
				font-size: 0.95rem;
				opacity: 0.9;
			}

			/* Sidebar */
			.article-sidebar {
				width: var(--sidebar-width);
				min-width: 250px;
				max-width: 300px;
				position: sticky;
				top: 2rem;
				flex-shrink: 0;
				align-self: flex-start;
			}

			/* Responsive Design */
			@media (max-width: 1024px) {
				.article-wrapper {
					padding: 0 1rem;
				}
				.article-container {
					gap: 2rem;
				}

				.article-sidebar {
					width: 280px;
					min-width: 250px;
					max-width: 300px;
				}
			}

			@media (max-width: 768px) {
				.article-wrapper {
					padding: 0 var(--mobile-padding);
				}
				.article-container {
					flex-direction: column;
					gap: 2rem;
				}

				.article-sidebar {
					width: 100%;
					max-width: none;
					position: static;
				}

				.article-title {
					font-size: 2rem;
				}

				.hero-image {
					margin-bottom: 2rem;
				}

				.hero-image img {
					max-height: 300px;
				}

				.article-meta {
					flex-direction: column;
					align-items: flex-start;
					gap: 1rem;
				}

				.article-body {
					font-size: 1rem;
				}

				.article-body .pros-cons {
					grid-template-columns: 1fr;
					gap: 1rem;
				}

				.article-body .rating-display {
					flex-direction: column;
					text-align: center;
					gap: 0.5rem;
				}

				.article-body .rating-score {
					font-size: 2.5rem;
				}

				.article-body table {
					font-size: 0.9rem;
				}

				.article-body table th,
				.article-body table td {
					padding: 0.75rem 0.5rem;
				}
			}

			@media (max-width: 480px) {
				.article-title {
					font-size: 1.75rem;
				}

				.article-body h1 { font-size: 1.75rem; }
				.article-body h2 { font-size: 1.5rem; }
				.article-body h3 { font-size: 1.25rem; }

				.hero-image img {
					max-height: 200px;
				}
			}

			@media (max-width: 900px) {
				.hero-image { height: 300px; }
				.hero-title { font-size: 2rem; }
				.hero-text { padding: 1.5rem 1rem 1.5rem 1rem; }
			}
			@media (max-width: 600px) {
				.hero-image { height: 180px; border-radius: 8px; }
				.hero-title { font-size: 1.2rem; }
				.hero-meta { font-size: 0.92rem; gap: 0.7rem; }
				.hero-text { padding: 0.7rem 0.5rem 0.7rem 0.5rem; }
			}

			/* Utility Classes */
			.single-column {
				max-width: 800px;
				margin: 0 auto;
			}

			.two-column {
				/* Default behavior for two-column layout */
			}

			.author-link {
				color: #1ecfff;
				text-decoration: none;
				transition: color 0.2s;
				font-weight: 600;
				border-bottom: none;
			}
			.author-link:hover, .author-link:focus {
				color: #3182ce;
				text-decoration: none;
				border-bottom: none;
			}
		</style>
	</head>

	<body>
		<Header />
		<div class="article-wrapper">
			{heroImage ? (
				<div class="hero-image">
					<img
						src={heroImage}
						alt={title || 'Featured image'}
						width="1200"
						height="600"
						loading="eager"
						srcset={`${heroImage}?w=400 400w, ${heroImage}?w=800 800w, ${heroImage}?w=1200 1200w`}
						sizes="(max-width: 768px) 100vw, 1200px"
						class="fade-img"
						id="featured-hero-img"
					/>
					<div class="hero-overlay"></div>
					<div class="hero-text">
						<h1 class="hero-title">{title}</h1>
						<div class="hero-meta">
							<span class="meta-item">By {authorSlug && authorName ? (<a href={`/authors/${authorSlug}`} class="author-link">{authorName}</a>) : (authorName || 'AI Buzz Media')}</span>
							<span class="meta-dot"></span>
							<span class="meta-item"><FormattedDate date={pubDateObj} /></span>
							{updatedDateObj && (
								<>
									<span class="meta-dot"></span>
									<span class="meta-item">Updated <FormattedDate date={updatedDateObj} /></span>
								</>
							)}
						</div>
					</div>
				</div>
			) : null}
			<div class="article-container">
				<div class="article-content">
					<div class="article-body">
						<slot />
					</div>
				</div>
				<div class="article-sidebar">
					<slot name="sidebar" />
				</div>
			</div>
		</div>
		<Footer />
	</body>
</html>
