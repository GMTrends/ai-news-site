---

<aside class={`category-sidebar gpu-accelerated ${className}`}>
  <!-- Prime Ad Space (Top) -->
  <div class="sidebar-section sidebar-ad-prime">
    <!-- Ad content here (use getAdContent or static markup) -->
    {(() => { const ad = getAdContent('brand-awareness', 1); return (
      <div class="promo-placeholder">
        <div class="promo-content">
          <div class="promo-icon">{ad.icon}</div>
          <div class="promo-text">
            <p>{ad.title}</p>
            <small>{ad.subtitle}</small>
          </div>
          <button class="promo-cta">{ad.cta}</button>
        </div>
      </div>
    ); })()}
  </div>

  <!-- Related Articles (Middle) -->
  <div class="sidebar-section sidebar-related">
    <h3 class="sidebar-title">Related in {categorySlug?.charAt(0).toUpperCase() + categorySlug?.slice(1)}</h3>
    <div class="related-articles">
      {filteredArticles.map((a: any) => (
        <a href={`/${categorySlug}/${a.slug}`} class="related-article-item">
          <img src={a.featuredImage} alt={a.title} class="related-article-thumbnail" width="56" height="56" loading="lazy" decoding="async" />
          <div class="related-article-content">
            <h4 class="related-article-title">{a.title}</h4>
            <div class="related-article-date">{a.date}</div>
