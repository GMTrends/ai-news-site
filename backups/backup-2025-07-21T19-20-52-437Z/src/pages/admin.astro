---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

const pageTitle = `Admin - ${SITE_TITLE}`;
const description = 'Content management system for AI Buzz Media';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={pageTitle} description={description} image="/assets/blog-placeholder-1.jpg" />
	</head>
	<body>
		<Header />
		<main class="admin-page">
			<div class="admin-container">
				<div class="admin-card">
					<div class="admin-header">
						<h1 class="admin-title">Content Management</h1>
						<p class="admin-subtitle">Manage your AI news content</p>
					</div>
					
					<div class="admin-actions">
						<a href="http://localhost:3333" class="admin-button primary" target="_blank">
							<span class="button-icon">üìù</span>
							<span class="button-text">Open Sanity Studio</span>
						</a>
						
						<div class="admin-stats">
							<a href="http://localhost:3333/desk/articles" class="stat-item" target="_blank">
								<span class="stat-number">Articles</span>
								<span class="stat-label">Manage blog posts</span>
							</a>
							<a href="http://localhost:3333/desk/authors" class="stat-item" target="_blank">
								<span class="stat-number">Authors</span>
								<span class="stat-label">Manage contributors</span>
							</a>
							<a href="http://localhost:3333/desk/categories" class="stat-item" target="_blank">
								<span class="stat-number">Categories</span>
								<span class="stat-label">Organize content</span>
							</a>
							<a href="http://localhost:3333/desk" class="stat-item" target="_blank">
								<span class="stat-number">Studio</span>
								<span class="stat-label">Full CMS interface</span>
							</a>
						</div>
						
						<div class="quick-actions">
							<h3>Quick Actions</h3>
							<div class="action-buttons">
								<a href="http://localhost:3333/desk/articles;create" class="action-button primary" target="_blank">
									<span class="button-icon">‚úèÔ∏è</span>
									<span class="button-text">Create New Article</span>
								</a>
								<a href="http://localhost:3333/desk/authors;create" class="action-button secondary" target="_blank">
									<span class="button-icon">üë§</span>
									<span class="button-text">Add New Author</span>
								</a>
								<a href="http://localhost:3333/desk" class="action-button success" target="_blank">
									<span class="button-icon">‚öôÔ∏è</span>
									<span class="button-text">Sanity Studio</span>
								</a>
							</div>
						</div>
						
						<div class="cms-info">
							<h3>CMS Information</h3>
							<div class="info-grid">
								<div class="info-item">
									<span class="info-label">CMS Type:</span>
									<span class="info-value">Sanity Studio</span>
								</div>
								<div class="info-item">
									<span class="info-label">Backend:</span>
									<span class="info-value">Sanity Cloud</span>
								</div>
								<div class="info-item">
									<span class="info-label">Status:</span>
									<span class="info-value status-active">Active</span>
								</div>
								<div class="info-item">
									<span class="info-label">Collections:</span>
									<span class="info-value">3 Available</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
		<Footer />
		
		<!-- Admin Page Scripts -->
		<script>
			// Simple admin page functionality
			document.addEventListener('DOMContentLoaded', function() {
				// Add click tracking for analytics
				document.querySelectorAll('a[href*="localhost:3333"]').forEach(link => {
					link.addEventListener('click', (event) => {
						const target = event.currentTarget as HTMLAnchorElement;
					});
				});
				
				// Add loading states
				document.querySelectorAll('.admin-button, .action-button').forEach(button => {
					button.addEventListener('click', (event) => {
						const target = event.currentTarget as HTMLAnchorElement;
						if (target.href && target.href.includes('localhost:3333')) {
							const originalText = target.innerHTML;
							target.innerHTML = '<span class="loading-spinner"></span> Loading...';
							target.style.pointerEvents = 'none';
							
							// Reset after a delay
							setTimeout(() => {
								target.innerHTML = originalText;
								target.style.pointerEvents = 'auto';
							}, 2000);
						}
					});
				});
			});
		</script>
	</body>
</html>

<style>
.admin-page {
	min-height: 100vh;
	background: linear-gradient(135deg, rgba(0, 212, 255, 0.05) 0%, rgba(0, 102, 255, 0.05) 100%);
	padding: 4rem 0;
}

.admin-container {
	max-width: 800px;
	margin: 0 auto;
	padding: 0 2rem;
}

.admin-card {
	background: rgba(26, 26, 27, 0.9);
	backdrop-filter: blur(20px);
	border: 1px solid rgba(0, 212, 255, 0.2);
	border-radius: 20px;
	padding: 3rem;
	text-align: center;
	box-shadow: 
		0 20px 60px rgba(0, 212, 255, 0.1),
		0 8px 32px rgba(0, 0, 0, 0.2);
}

.admin-header {
	margin-bottom: 3rem;
}

.admin-title {
	font-size: 2.5rem;
	font-weight: 700;
	margin-bottom: 1rem;
	background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	background-clip: text;
}

.admin-subtitle {
	font-size: 1.1rem;
	color: #b3b3b3;
	margin: 0;
}

.admin-actions {
	display: flex;
	flex-direction: column;
	gap: 2rem;
}

.admin-button {
	display: inline-flex;
	align-items: center;
	gap: 1rem;
	padding: 1rem 2rem;
	background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
	color: white;
	text-decoration: none;
	border-radius: 12px;
	font-weight: 600;
	font-size: 1.1rem;
	transition: all 0.3s ease;
	border: none;
	cursor: pointer;
	box-shadow: 0 8px 32px rgba(0, 212, 255, 0.3);
}

.admin-button:hover {
	transform: translateY(-2px);
	box-shadow: 0 12px 40px rgba(0, 212, 255, 0.4);
}

.admin-button.primary {
	background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
}

.button-icon {
	font-size: 1.5rem;
}

.admin-stats {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
	gap: 1.5rem;
	margin-top: 2rem;
}

.stat-item {
	background: rgba(255, 255, 255, 0.05);
	border: 1px solid rgba(255, 255, 255, 0.1);
	border-radius: 12px;
	padding: 1.5rem;
	transition: all 0.3s ease;
	text-decoration: none;
	color: inherit;
	display: block;
}

.stat-item:hover {
	background: rgba(0, 212, 255, 0.1);
	border-color: rgba(0, 212, 255, 0.3);
	transform: translateY(-2px);
	text-decoration: none;
	color: inherit;
}

.stat-number {
	display: block;
	font-size: 1.5rem;
	font-weight: 700;
	color: #00d4ff;
	margin-bottom: 0.5rem;
}

.stat-label {
	font-size: 0.9rem;
	color: #b3b3b3;
}

.quick-actions {
	margin-top: 2rem;
	padding-top: 2rem;
	border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.quick-actions h3 {
	font-size: 1.5rem;
	font-weight: 600;
	color: #00d4ff;
	margin-bottom: 1.5rem;
}

.action-buttons {
	display: flex;
	gap: 1rem;
	flex-wrap: wrap;
	justify-content: center;
}

.action-button {
	display: inline-flex;
	align-items: center;
	gap: 0.5rem;
	padding: 0.75rem 1.5rem;
	border-radius: 8px;
	font-weight: 500;
	font-size: 0.9rem;
	text-decoration: none;
	transition: all 0.3s ease;
	border: none;
	cursor: pointer;
}

.action-button.primary {
	background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
	color: white;
}

.action-button.secondary {
	background: rgba(255, 255, 255, 0.1);
	color: #b3b3b3;
	border: 1px solid rgba(255, 255, 255, 0.2);
}

.action-button.success {
	background: linear-gradient(135deg, #10b981 0%, #059669 100%);
	color: white;
}

.action-button:hover {
	transform: translateY(-2px);
	text-decoration: none;
}

.action-button.primary:hover {
	box-shadow: 0 8px 20px rgba(0, 212, 255, 0.4);
}

.action-button.secondary:hover {
	background: rgba(0, 212, 255, 0.1);
	border-color: rgba(0, 212, 255, 0.3);
	color: #00d4ff;
}

.action-button.success:hover {
	box-shadow: 0 8px 20px rgba(16, 185, 129, 0.4);
}

.cms-info {
	margin-top: 2rem;
	padding-top: 2rem;
	border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.cms-info h3 {
	font-size: 1.5rem;
	font-weight: 600;
	color: #00d4ff;
	margin-bottom: 1.5rem;
}

.info-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
	gap: 1rem;
}

.info-item {
	background: rgba(255, 255, 255, 0.05);
	border: 1px solid rgba(255, 255, 255, 0.1);
	border-radius: 8px;
	padding: 1rem;
	text-align: left;
}

.info-label {
	display: block;
	font-size: 0.8rem;
	color: #b3b3b3;
	margin-bottom: 0.25rem;
}

.info-value {
	display: block;
	font-size: 1rem;
	font-weight: 600;
	color: #ffffff;
}

.status-active {
	color: #10b981 !important;
}

.loading-spinner {
	display: inline-block;
	width: 16px;
	height: 16px;
	border: 2px solid rgba(255,255,255,.3);
	border-radius: 50%;
	border-top-color: #fff;
	animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
	to { transform: rotate(360deg); }
}

@media (max-width: 768px) {
	.admin-container {
		padding: 0 1rem;
	}
	
	.admin-card {
		padding: 2rem;
	}
	
	.admin-title {
		font-size: 2rem;
	}
	
	.admin-stats {
		grid-template-columns: repeat(2, 1fr);
	}
	
	.action-buttons {
		flex-direction: column;
	}
	
	.action-button {
		justify-content: center;
	}
	
	.info-grid {
		grid-template-columns: 1fr;
	}
}
</style> 