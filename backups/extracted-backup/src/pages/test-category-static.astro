---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CategorySidebar from '../components/CategorySidebar.astro';
import CategoryHero from '../components/CategoryHero.astro';
import '../styles/global.css';

// Static test data - no Sanity calls
const testCategoryData = {
  slug: 'test',
  title: 'Test Category',
  description: 'This is a test category page with static data to isolate rendering issues.',
  icon: 'ðŸ§ª',
  toolsCount: 5,
  lastUpdated: 'Today',
  keywords: ['test', 'debugging'],
  metaDescription: 'Test category page for debugging'
};

const testArticles = [
  {
    _id: '1',
    title: 'Test Article 1',
    slug: 'test-article-1',
    excerpt: 'This is a test article excerpt to verify rendering works.',
    publishedAt: '2025-07-30',
    author: { name: 'Test Author', slug: 'test-author' },
    category: { name: 'Test', displayName: 'Test Category' },
    featuredImage: null
  },
  {
    _id: '2',
    title: 'Test Article 2',
    slug: 'test-article-2',
    excerpt: 'Another test article to verify the grid layout works properly.',
    publishedAt: '2025-07-29',
    author: { name: 'Test Author 2', slug: 'test-author-2' },
    category: { name: 'Test', displayName: 'Test Category' },
    featuredImage: null
  }
];

const pageTitle = testCategoryData.title + " - Tools & Strategies";
const pageDescription = testCategoryData.metaDescription;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle}</title>
  <meta name="description" content={pageDescription} />
  <style>
    body { background: #0a0a0a; color: #ffffff; }
    .debug-info { 
      background: #1a1a1a; 
      padding: 1rem; 
      margin: 1rem; 
      border-radius: 8px;
      border: 1px solid #333;
    }
  </style>
</head>
<body>
  <div class="debug-info">
    <h2>ðŸ§ª Debug Test Page</h2>
    <p>This page uses static data to test if the issue is with Sanity or rendering.</p>
    <p>Category Data: {JSON.stringify(testCategoryData)}</p>
    <p>Articles Count: {testArticles.length}</p>
  </div>

  <Header />
  <div class="main-content">
    <main class="category-page">
      <CategoryHero 
        category={testCategoryData.slug}
        title={testCategoryData.title}
        description={testCategoryData.description}
        icon={testCategoryData.icon}
        toolsCount={testCategoryData.toolsCount}
        lastUpdated={testCategoryData.lastUpdated}
        breadcrumbs={[
          { name: "Home", url: "/" },
          { name: "Categories", url: "/categories" }
        ]}
      />
      <div class="category-content">
        <div class="category-layout">
          <div class="category-main">
            <div class="articles-grid">
              {testArticles.length > 0 ? (
                testArticles.map((article) => (
                  <article class="category-article">
                    <div class="article-image">
                      <div class="placeholder">ðŸ§ª</div>
                    </div>
                    <div class="article-content">
                      <a href="/categories/test" class="category-badge-small test">Test</a>
                      <h2><a href={`/test/${article.slug}`}>{article.title}</a></h2>
                      <p>{article.excerpt}</p>
                      <div class="article-meta">
                        <span class="author">By <a href={`/authors/${article.author.slug}`} class="author-link">{article.author.name}</a></span>
                        <span class="date">{new Date(article.publishedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                      </div>
                    </div>
                  </article>
                ))
              ) : (
                <div class="no-articles">
                  <h3>No Test Articles Found</h3>
                  <p>This should not appear since we have static test data.</p>
                </div>
              )}
            </div>
          </div>
          <CategorySidebar categorySlug="test" />
        </div>
      </div>
    </main>
    <div class="footer-padding-spacer"></div>
  </div>
  <Footer />
  
  <style>
    .main-content {
      min-height: 100vh;
      position: relative;
    }
    
    .category-page {
      width: 100%;
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 1rem;
    }
    
    .category-content {
      padding: 2rem 0;
    }
    
    .category-layout {
      display: grid;
      grid-template-columns: 1fr 340px;
      gap: 2rem;
      align-items: start;
    }
    
    .articles-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 1.5rem;
    }
    
    .category-article {
      background: #1a1a1a;
      border-radius: 12px;
      overflow: hidden;
      border: 1px solid #333;
      transition: transform 0.2s ease, border-color 0.2s ease;
    }
    
    .category-article:hover {
      transform: translateY(-2px);
      border-color: #555;
    }
    
    .article-image {
      height: 200px;
      background: #2a2a2a;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .placeholder {
      font-size: 3rem;
      opacity: 0.5;
    }
    
    .article-content {
      padding: 1.5rem;
    }
    
    .category-badge-small {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      background: #333;
      color: #fff;
      text-decoration: none;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      margin-bottom: 0.75rem;
    }
    
    .article-content h2 {
      margin: 0 0 0.75rem 0;
      font-size: 1.25rem;
      line-height: 1.4;
    }
    
    .article-content h2 a {
      color: #ffffff;
      text-decoration: none;
    }
    
    .article-content h2 a:hover {
      color: #4f46e5;
    }
    
    .article-content p {
      color: #cccccc;
      line-height: 1.6;
      margin-bottom: 1rem;
    }
    
    .article-meta {
      display: flex;
      gap: 1rem;
      font-size: 0.875rem;
      color: #888;
    }
    
    .author-link {
      color: #4f46e5;
      text-decoration: none;
    }
    
    .no-articles {
      text-align: center;
      padding: 3rem;
      background: #1a1a1a;
      border-radius: 12px;
      border: 1px solid #333;
    }
    
    .footer-padding-spacer {
      height: 200px;
    }
    
    @media (max-width: 768px) {
      .category-layout {
        grid-template-columns: 1fr;
        gap: 1rem;
      }
      
      .articles-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</body>
</html>
