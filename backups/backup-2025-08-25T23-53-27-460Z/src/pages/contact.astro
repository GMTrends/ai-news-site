---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Contact Us | AI Buzz Media</title>
  <meta name="description" content="Get in touch with AI Buzz Media. We'd love to hear from you about AI news, partnerships, or any questions you might have." />
  
  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:title" content="Contact Us | AI Buzz Media" />
  <meta property="og:description" content="Get in touch with AI Buzz Media. We'd love to hear from you about AI news, partnerships, or any questions you might have." />
  <meta property="og:site_name" content="AI Buzz Media" />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary" />
  <meta property="twitter:url" content={Astro.url} />
  <meta property="twitter:title" content="Contact Us | AI Buzz Media" />
  <meta property="twitter:description" content="Get in touch with AI Buzz Media. We'd love to hear from you about AI news, partnerships, or any questions you might have." />
  
  <link rel="canonical" href={Astro.url} />
</head>
<body>
  <MainLayout title="Contact Us - AI Buzz Media" description="Get in touch with the AI Buzz Media team. We'd love to hear from you about AI news, partnerships, or any questions you might have." bodyClass="contact-body">
    <div class="main-content">
      <main class="contact-page">
        <div class="contact-hero">
          <div class="container">
            <h1 class="page-title">Get In Touch</h1>
            <p class="page-subtitle">We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
          </div>
        </div>
        
        <section class="contact-section">
          <div class="container">
            <div class="contact-grid">
              <!-- Left Column - Contact Info -->
              <div class="contact-info">
                <h2 class="section-title">Let's Connect</h2>
                <p class="section-description">
                  Whether you have a question about AI news, want to partner with us, or just want to say hello, we're here to help.
                </p>
                
                <div class="contact-details">
                  <div class="contact-item">
                    <div class="contact-icon">üìß</div>
                    <div class="contact-text">
                      <h3>Email Us</h3>
                      <p>hello@aibuzzmedia.com</p>
                      <p>We typically respond within 24 hours</p>
                    </div>
                  </div>
                  
                  <div class="contact-item">
                    <div class="contact-icon">üåê</div>
                    <div class="contact-text">
                      <h3>Follow Us</h3>
                      <p>Stay updated with the latest AI news</p>
                      <div class="social-links">
                        <a href="#" class="social-link">Twitter</a>
                        <a href="#" class="social-link">LinkedIn</a>
                        <a href="#" class="social-link">Newsletter</a>
                      </div>
                    </div>
                  </div>
                  
                  <div class="contact-item">
                    <div class="contact-icon">üíº</div>
                    <div class="contact-text">
                      <h3>Partnerships</h3>
                      <p>Interested in collaborating?</p>
                      <p>We're always open to discussing new opportunities</p>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Right Column - Contact Form -->
              <div class="contact-form-container">
                <div class="form-card">
                  <h2 class="form-title">Send us a Message</h2>
                  <form class="contact-form" id="contactForm">
                    <!-- Honeypot field (hidden from users) -->
                    <div class="honeypot-field" style="display: none;">
                      <input type="text" name="honeypot" id="honeypot" tabindex="-1" autocomplete="off" />
                    </div>
                    
                    <div class="form-group">
                      <label for="name" class="form-label">Full Name *</label>
                      <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        class="form-input" 
                        required
                        placeholder="Enter your full name"
                        autocomplete="name"
                      />
                    </div>
                    
                    <div class="form-group">
                      <label for="email" class="form-label">Email Address *</label>
                      <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="form-input" 
                        required
                        placeholder="Enter your email address"
                        autocomplete="email"
                      />
                    </div>
                    
                    <div class="form-group">
                      <label for="subject" class="form-label">Subject *</label>
                      <select id="subject" name="subject" class="form-select" required>
                        <option value="">Select a subject</option>
                        <option value="general">General Inquiry</option>
                        <option value="partnership">Partnership Opportunity</option>
                        <option value="content">Content Suggestion</option>
                        <option value="technical">Technical Support</option>
                        <option value="other">Other</option>
                      </select>
                    </div>
                    
                    <div class="form-group">
                      <label for="message" class="form-label">Message *</label>
                      <textarea 
                        id="message" 
                        name="message" 
                        class="form-textarea" 
                        rows="5" 
                        required
                        placeholder="Tell us how we can help you..."
                      ></textarea>
                    </div>
                    
                    <div class="form-group">
                      <label class="checkbox-label">
                        <input type="checkbox" name="newsletter" class="form-checkbox" />
                        <span class="checkmark"></span>
                        Subscribe to our newsletter for the latest AI news
                      </label>
                    </div>
                    
                    <button type="submit" class="submit-button" id="submitButton">
                      <span class="button-text">Send Message</span>
                      <span class="button-icon">üì§</span>
                    </button>
                    
                    <!-- Form Messages -->
                    <div class="form-message-container" id="messageContainer" style="display: none;">
                      <div class="form-message" id="formMessage"></div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>
      </main>
      <div class="footer-padding-spacer"></div>
    </div>
  </MainLayout>

  <style>
    html, body {
      background: var(--color-bg);
      min-height: 100vh;
      margin: 0;
      padding: 0;
      width: 100%;
      box-sizing: border-box;
    }
    .contact-page {
      min-height: 100vh;
    }
    
    .contact-hero {
      background: linear-gradient(135deg, rgba(0, 212, 255, 0.1) 0%, rgba(0, 102, 255, 0.1) 100%);
      padding: 4rem 0;
      /* Add top padding to account for fixed header */
      padding-top: 3rem;
      text-align: center;
      border-bottom: 1px solid rgba(0, 212, 255, 0.2);
      margin: 0;
    }
    
    /* Match the background of the section above the footer for the spacer */
    .footer-padding-spacer {
      height: 0 !important;
      min-height: 0 !important;
      padding: 0 !important;
      margin: 0 !important;
      background: var(--color-bg) !important;
    }
    
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }
    
    .page-title {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 1rem;
      background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .page-subtitle {
      font-size: 1.2rem;
      color: var(--color-text-secondary);
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.6;
    }
    
    .contact-section {
      padding: 4rem 0;
      background: var(--color-bg);
    }
    
    .contact-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: start;
    }
    
    .contact-info {
      padding-right: 2rem;
    }
    
    .section-title {
      font-size: 2rem;
      font-weight: 600;
      margin-bottom: 1rem;
      color: var(--color-text);
    }
    
    .section-description {
      font-size: 1.1rem;
      color: var(--color-text-secondary);
      margin-bottom: 3rem;
      line-height: 1.6;
    }
    
    .contact-details {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }
    
    .contact-item {
      display: flex;
      gap: 1rem;
      align-items: flex-start;
    }
    
    .contact-icon {
      font-size: 1.5rem;
      width: 3rem;
      height: 3rem;
      background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }
    
    .contact-text h3 {
      font-size: 1.2rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: var(--color-text);
    }
    
    .contact-text p {
      color: var(--color-text-secondary);
      margin-bottom: 0.5rem;
      line-height: 1.5;
    }
    
    .social-links {
      display: flex;
      gap: 1rem;
      margin-top: 0.5rem;
    }
    
    .social-link {
      color: #00d4ff;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s ease;
    }
    
    .social-link:hover {
      color: #0066ff;
    }
    
    .contact-form-container {
      display: flex;
      justify-content: center;
    }
    
    .form-card {
      background: rgba(30, 30, 31, 0.8);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(0, 212, 255, 0.2);
      border-radius: 16px;
      padding: 2.5rem;
      width: 100%;
      max-width: 500px;
      box-shadow: 0 20px 50px rgba(0, 212, 255, 0.1);
    }
    
    .form-title {
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 2rem;
      text-align: center;
      color: var(--color-text);
    }
    
    .contact-form {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }
    
    .form-group {
      display: flex;
      flex-direction: column;
    }
    
    .form-label {
      font-weight: 500;
      margin-bottom: 0.5rem;
      color: var(--color-text);
    }
    
    .form-input,
    .form-select,
    .form-textarea {
      padding: 0.75rem 1rem;
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 8px;
      background: rgba(255, 255, 255, 0.05);
      color: var(--color-text);
      font-size: 1rem;
      transition: all 0.3s ease;
    }
    
    .form-input:focus,
    .form-select:focus,
    .form-textarea:focus {
      outline: none;
      border-color: #00d4ff;
      box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
    }
    
    .form-textarea {
      resize: vertical;
      min-height: 120px;
    }
    
    .checkbox-label {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      cursor: pointer;
      color: var(--color-text-secondary);
      font-size: 0.9rem;
    }
    
    .form-checkbox {
      width: 1rem;
      height: 1rem;
      accent-color: #00d4ff;
    }
    
    .submit-button {
      background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
      color: white;
      border: none;
      padding: 1rem 2rem;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      margin-top: 1rem;
    }
    
    .submit-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(0, 212, 255, 0.3);
    }
    
    .button-icon {
      font-size: 1.1rem;
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
      .contact-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
      }
      
      .contact-info {
        padding-right: 0;
      }
      
      .page-title {
        font-size: 2.5rem;
      }
      
      .page-subtitle {
        font-size: 1rem;
      }
      
      .container {
        padding: 0 1rem;
      }
    }
    
    /* Form Message Styles */
    .form-message-container {
      margin-top: 1rem;
    }
    
    .form-message {
      padding: 1rem;
      border-radius: 8px;
      text-align: center;
      font-weight: 500;
      animation: slideIn 0.3s ease;
    }
    
    .form-message.success {
      background: rgba(34, 197, 94, 0.15);
      border: 1px solid rgba(34, 197, 94, 0.3);
      color: #22c55e;
    }
    
    .form-message.error {
      background: rgba(239, 68, 68, 0.15);
      border: 1px solid rgba(239, 68, 68, 0.3);
      color: #ef4444;
    }
    
    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    /* Loading state for button */
    .submit-button.loading {
      position: relative;
      color: rgba(255, 255, 255, 0.7);
    }
    
    .submit-button.loading::after {
      content: '';
      position: absolute;
      width: 20px;
      height: 20px;
      top: 50%;
      left: 50%;
      margin: -10px 0 0 -10px;
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-top-color: #fff;
      border-radius: 50%;
      animation: button-loading-spinner 0.6s linear infinite;
    }
    
    @keyframes button-loading-spinner {
      from {
        transform: rotate(0turn);
      }
      to {
        transform: rotate(1turn);
      }
    }

    .main-content {
      min-height: calc(100vh - 400px); /* Adjust 400px if your footer is taller/shorter */
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
    }

    /* Make the floating widget fixed at the bottom center only on the Contact page */
    body.contact-body .floating-card {
      position: fixed !important;
      left: 50% !important;
      bottom: 2rem !important;
      transform: translateX(-50%) !important;
      z-index: 9999 !important;
    }
  </style>

  <script>
    // Utility functions
    function showMessage(message: string, type: 'success' | 'error') {
      const messageContainer = document.getElementById('messageContainer') as HTMLDivElement;
      const formMessage = document.getElementById('formMessage') as HTMLDivElement;
      
      if (messageContainer && formMessage) {
        formMessage.textContent = message;
        formMessage.className = `form-message ${type}`;
        messageContainer.style.display = 'block';
        
        // Auto-hide after 5 seconds
        setTimeout(() => {
          messageContainer.style.display = 'none';
        }, 5000);
      }
    }
    
    function setLoadingState(loading: boolean) {
      const button = document.getElementById('submitButton') as HTMLButtonElement;
      const buttonText = button?.querySelector('.button-text') as HTMLSpanElement;
      
      if (button && buttonText) {
        if (loading) {
          button.classList.add('loading');
          button.disabled = true;
          buttonText.textContent = 'Sending...';
        } else {
          button.classList.remove('loading');
          button.disabled = false;
          buttonText.textContent = 'Send Message';
        }
      }
    }
    
    // Initialize form
    document.addEventListener('DOMContentLoaded', function() {
      const contactForm = document.getElementById('contactForm') as HTMLFormElement;
      
      if (contactForm) {
        contactForm.addEventListener('submit', async function(e) {
          e.preventDefault();
          
          // Get form data
          const formData = new FormData(this);
          const data = Object.fromEntries(formData);
          
          // Show loading state
          setLoadingState(true);
          
          try {
            // Use Netlify function for email sending
            const response = await fetch('/.netlify/functions/contact', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(data)
            });
            
            const result = await response.json();
            
            if (response.ok && result.success) {
              showMessage(result.message || 'Message sent successfully! We will get back to you soon.', 'success');
              this.reset();
            } else {
              showMessage(result.error || 'Failed to send message. Please try again.', 'error');
            }
          } catch (error) {
            showMessage('Network error. Please check your connection and try again.', 'error');
          } finally {
            setLoadingState(false);
          }
        });
      }
    });
  </script> 
</body>
</html> 