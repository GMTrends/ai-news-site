---

<aside class={`category-sidebar gpu-accelerated ${className}`}>
  <!-- Search Section -->
  <div class="sidebar-section sidebar-search">
    <SearchBar compact={true} />
  </div>

  <!-- First Ad Space for high-value categories -->
  {config.adSpaces >= 1 && (
    <div class="sidebar-section">
      {(() => {
        const ad = getAdContent(config.adTypes[0], 1);
        return (
          <div class="ad-placeholder">
            {ad.image && ad.isRealAd ? (
              <a href={ad.link} target="_blank" rel="noopener noreferrer" class="ad-link">
                <img src={ad.image} alt={ad.title} class="ad-image" />
                <div class="ad-overlay">
                  <div class="ad-text">
                    <p>{ad.title}</p>
                    <small>{ad.subtitle}</small>
                  </div>
                  <button class="ad-cta">{ad.cta}</button>
                </div>
              </a>
            ) : (
              <div class="ad-content">
                <div class="ad-icon">{ad.icon}</div>
                <div class="ad-text">
                  <p>{ad.title}</p>
                  <small>{ad.subtitle}</small>
                </div>
                <button class="ad-cta">{ad.cta}</button>
              </div>
            )}
          </div>
        );
      })()}
    </div>
  )}

  <!-- Newsletter Section -->
  {config.newsletter && (
    <div class="sidebar-section">
      <h3>üîî AI Insights Newsletter</h3>
      <p class="newsletter-description">
        {config.newsletterMessage}
      </p>
      <div class="newsletter-form">
        <input 
          type="email" 
          placeholder="Enter your email"
          class="newsletter-input"
        />
        <button class="newsletter-cta">
          Subscribe
        </button>
      </div>
    </div>
  )}

  <!-- Second Ad Space -->
  {config.adSpaces >= 2 && (
    <div class="sidebar-section">
      {(() => {
        const ad = getAdContent(config.adTypes[1], 2);
        return (
          <div class="ad-placeholder">
            {ad.image && ad.isRealAd ? (
              <a href={ad.link} target="_blank" rel="noopener noreferrer" class="ad-link">
                <img src={ad.image} alt={ad.title} class="ad-image" />
                <div class="ad-overlay">
                  <div class="ad-text">
                    <p>{ad.title}</p>
                    <small>{ad.subtitle}</small>
                  </div>
                  <button class="ad-cta">{ad.cta}</button>
                </div>
              </a>
            ) : (
              <div class="ad-content">
                <div class="ad-icon">{ad.icon}</div>
                <div class="ad-text">
                  <p>{ad.title}</p>
                  <small>{ad.subtitle}</small>
                </div>
                <button class="ad-cta">{ad.cta}</button>
              </div>
            )}
          </div>
        );
      })()}
    </div>
  )}

  <!-- Related Articles -->
  <div class="sidebar-section sidebar-related">
    <h3 class="sidebar-title">Related in {categorySlug.charAt(0).toUpperCase() + categorySlug.slice(1)}</h3>
    <div class="related-articles">
      {filteredArticles.length === 0 && <div class="no-related">No related articles found.</div>}
      {filteredArticles.map((article: any) => (
        <a href={`/${categorySlug}/${article.slug}`} class="related-article-item">
          <img 
            src={article.featuredImage ? generateWebPUrl(article.featuredImage, 56, 56) : '/api/placeholder/56/56'} 
            alt={article.title}
            class="related-article-thumbnail"
            width="56"
            height="56"
            loading="lazy"
            decoding="async"
          />
          <div class="related-article-content">
            <h4 class="related-article-title">
              {article.title}
            </h4>
            <div class="related-article-date">
              {new Date(article.publishedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>

  <!-- Third Ad Space for maximum monetization categories -->
  {config.adSpaces >= 3 && (
    <div class="sidebar-section">
      {(() => {
        const ad = getAdContent(config.adTypes[2], 3);
        return (
          <div class="ad-placeholder">
            {ad.image && ad.isRealAd ? (
              <a href={ad.link} target="_blank" rel="noopener noreferrer" class="ad-link">
                <img src={ad.image} alt={ad.title} class="ad-image" />
                <div class="ad-overlay">
                  <div class="ad-text">
                    <p>{ad.title}</p>
                    <small>{ad.subtitle}</small>
                  </div>
                  <button class="ad-cta">{ad.cta}</button>
                </div>
              </a>
            ) : (
              <div class="ad-content">
                <div class="ad-icon">{ad.icon}</div>
                <div class="ad-text">
                  <p>{ad.title}</p>
                  <small>{ad.subtitle}</small>
                </div>
                <button class="ad-cta">{ad.cta}</button>
              </div>
            )}
          </div>
        );
      })()}
    </div>
  )}

  <!-- Social Sharing Section -->
  <div class="sidebar-section sidebar-social">
    <div class="social-label">Share</div>
    <div class="social-icons">
