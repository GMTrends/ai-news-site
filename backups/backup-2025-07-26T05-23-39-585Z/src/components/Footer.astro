<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('Footer newsletter script loaded');
    
    const emailInput = document.getElementById('footerEmailInput');
    const subscribeButton = document.getElementById('footerSubscribeButton');
    const message = document.getElementById('footerFormMessage');
    
    console.log('Footer elements found:', { emailInput: !!emailInput, subscribeButton: !!subscribeButton, message: !!message });
    
    if (!emailInput || !subscribeButton || !message) {
        console.error('Footer form elements not found');
        return;
    }
    
    subscribeButton.addEventListener('click', async function(e) {
        console.log('Footer subscribe button clicked');
        e.preventDefault();
        e.stopPropagation();
        
        const email = emailInput.value.trim();
        
        if (!email) {
            showFooterMessage('Please enter your email address', 'error');
            return;
        }
        
        if (!isValidEmail(email)) {
            showFooterMessage('Please enter a valid email address', 'error');
            return;
        }
        
        // Show loading state
        showFooterMessage('Subscribing...', 'loading');
        subscribeButton.disabled = true;
        emailInput.disabled = true;
        
        try {
            const response = await fetch('/api/subscribe', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email: email })
            });
            
            const data = await response.json();
            
            if (response.ok && data.success) {
                showFooterMessage('Registration Successful! Welcome to AI Buzz Media.', 'success');
                emailInput.value = '';
            } else {
                showFooterMessage(data.error || 'Subscription failed. Please try again.', 'error');
            }
            
        } catch (error) {
            console.error('Footer subscription error:', error);
            showFooterMessage('Network error. Please try again.', 'error');
        } finally {
            subscribeButton.disabled = false;
            emailInput.disabled = false;
        }
    });
    
    function showFooterMessage(text, type) {
        message.textContent = text;
        message.className = `footer-form-message ${type}`;
        message.style.display = 'block';
        
        if (type === 'success' || type === 'error') {
            setTimeout(() => {
                message.style.display = 'none';
            }, 5000);
        }
    }
    
    function isValidEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
    }
});
</script>
