	/* Newsletter Visual Elements */
	.newsletter-visual {
		position: relative;
		width: 300px;
		height: 200px;
	}

	/* Floating Visual Cards - AI Technology with Neon Effects */
	.floating-card {
		position: absolute;
		width: 90px;
		height: 90px;
		background: rgba(6, 182, 212, 0.08);
		border: 1px solid rgba(6, 182, 212, 0.4);
		border-radius: 16px;
		backdrop-filter: blur(15px);
		animation: floatRandom 15s infinite ease-in-out;
		/* Performance optimizations */
		will-change: transform, box-shadow;
		transform: translateZ(0);
		/* Content layout */
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 0.75rem;
		text-align: center;
		/* Neon glow base */
		box-shadow: 
			0 0 20px rgba(6, 182, 212, 0.3),
			inset 0 0 20px rgba(6, 182, 212, 0.1);
		transition: all 0.3s ease;
		overflow: hidden;
	}

	/* Neon Glow Effect */
	.card-glow {
		position: absolute;
		top: -2px;
		left: -2px;
		right: -2px;
		bottom: -2px;
		background: linear-gradient(45deg, 
			rgba(6, 182, 212, 0.8), 
			rgba(168, 85, 247, 0.8), 
			rgba(6, 182, 212, 0.8)
		);
		border-radius: 18px;
		z-index: -1;
		animation: neonPulse 3s ease-in-out infinite;
		filter: blur(8px);
	}

	@keyframes neonPulse {
		0%, 100% {
			opacity: 0.6;
			transform: scale(1);
		}
		50% {
			opacity: 1;
			transform: scale(1.05);
		}
	}

	/* Particle Trail Effect - Random Magic Dust */
	.particle-trail {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		pointer-events: none;
		overflow: visible;
	}

	.particle-trail::before,
	.particle-trail::after,
	.particle-trail .particle {
		content: '';
		position: absolute;
		width: 2px;
		height: 2px;
		background: radial-gradient(circle, rgba(6, 182, 212, 0.9) 0%, rgba(6, 182, 212, 0.4) 50%, transparent 100%);
		border-radius: 50%;
		box-shadow: 0 0 4px rgba(6, 182, 212, 0.6);
	}

	/* Random particle animations with different paths */
	.particle-trail::before {
		top: 50%;
		left: 50%;
		animation: randomParticle1 8s linear infinite;
	}

	.particle-trail::after {
		top: 50%;
		left: 50%;
		animation: randomParticle2 6s linear infinite;
		animation-delay: 1s;
	}

	.particle-trail .particle:nth-child(1) {
		top: 50%;
		left: 50%;
		animation: randomParticle3 7s linear infinite;
		animation-delay: 2s;
	}

	.particle-trail .particle:nth-child(2) {
		top: 50%;
		left: 50%;
		animation: randomParticle4 9s linear infinite;
		animation-delay: 0.5s;
	}

	.particle-trail .particle:nth-child(3) {
		top: 50%;
		left: 50%;
		animation: randomParticle5 5s linear infinite;
		animation-delay: 3s;
	}

	/* Multiple random particle paths */
	@keyframes randomParticle1 {
		0% {
			opacity: 0;
			transform: translate(0, 0) scale(0);
		}
		10% {
			opacity: 1;
			transform: translate(-15px, -8px) scale(1);
		}
