<style>
  .ai-footer {
    background: linear-gradient(180deg, rgba(10, 10, 11, 0.98) 0%, rgba(15, 15, 16, 0.98) 50%, rgba(20, 20, 21, 0.98) 100%);
    backdrop-filter: blur(20px);
    border-top: 1px solid rgba(0, 212, 255, 0.15);
    color: var(--color-text-secondary);
    position: relative;
    overflow: hidden;
    z-index: 1;
    width: 100%;
  }
  .footer-main {
    background: rgba(15, 23, 42, 0.95);
    border-top: 1px solid rgba(71, 85, 105, 0.3);
    padding: 0;
  }
  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1rem 3rem;
  }
  .footer-grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr 0.8fr 0.8fr;
    gap: 2.5rem;
    align-items: start;
  }
  .footer-column {
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .footer-brand-section {
    grid-column: 1;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .footer-section {
    grid-column: auto;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .footer-heading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 1.1rem;
    font-weight: 600;
    color: #e2e8f0;
    margin: 0 0 1rem 0;
    text-align: center;
  }
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }
  .footer-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #94a3b8;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    padding: 0.25rem 0;
  }
  .footer-link:hover {
    color: #00d4ff;
    transform: translateX(4px);
  }
  .footer-bottom {
    border-top: 1px solid rgba(0, 212, 255, 0.1);
    padding: 0 0 0.1rem 0;
    background: rgba(0, 0, 0, 0.2);
    margin-top: 0;
  }
  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.2rem;
  }
  .footer-bottom-content p {
    line-height: 1;
  }
  .copyright-section {
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  .copyright {
    font-size: 0.9rem;
    margin: 0;
    color: #94a3b8;
  }
  .footer-mission-section {
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  .footer-mission {
    font-size: 0.9rem;
    margin: 0;
    color: #94a3b8;
    font-weight: 400;
  }
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
    .footer-brand-section {
      grid-column: 1 / -1;
    }
    .footer-content {
      padding: 2rem 1rem 2rem;
    }
  }
  @media (max-width: 768px) {
    .footer-main {
      padding: 2rem 0 1rem;
    }
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 0.75rem;
    }
    .footer-content {
      padding: 2rem 1rem 1.5rem;
    }
    .footer-bottom {
      padding: 0.1rem 0 0.75rem 0;
    }
    .copyright {
      font-size: 0.85rem;
    }
    .footer-mission {
      font-size: 0.75rem;
    }
  }
  @media (max-width: 480px) {
    .footer-links {
      text-align: center;
    }
    .footer-link {
      justify-content: center;
    }
    .footer-content {
      padding: 1.5rem 0.75rem 1rem;
    }
    .footer-bottom-content {
      gap: 0.5rem;
    }
    .footer-bottom {
      padding: 0.1rem 0 0.5rem 0;
    }
    .copyright {
      font-size: 0.8rem;
    }
    .footer-mission {
      font-size: 0.7rem;
    }
  }
</style>
