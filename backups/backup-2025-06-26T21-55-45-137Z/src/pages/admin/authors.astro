---
// Authors Management Page
import { getCollection } from 'astro:content';

// Get all authors
const authors = await getCollection('authors');

const pageTitle = 'Authors Management';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{pageTitle} - AI Buzz Media</title>
    <meta name="description" content="Manage authors for AI Buzz Media">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: #333;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }
        
        .header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .title {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }
        
        .subtitle {
            color: #666;
            font-size: 1.1rem;
        }
        
        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            color: #333;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            margin-bottom: 1rem;
        }
        
        .back-btn:hover {
            background: rgba(255, 255, 255, 1);
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }
        
        .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-size: 0.95rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
            color: white;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 212, 255, 0.3);
        }
        
        .btn-secondary {
            background: rgba(0, 0, 0, 0.05);
            color: #333;
            border: 1px solid rgba(0, 0, 0, 0.1);
        }
        
        .btn-secondary:hover {
            background: rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }
        
        .authors-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 1.5rem;
        }
        
        .author-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .author-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        }
        
        .author-header {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
        }
        
        .author-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            margin-right: 1.5rem;
        }
        
        .author-info h2 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
        }
        
        .author-title {
            color: #666;
            font-size: 1rem;
            margin-bottom: 0.5rem;
        }
        
        .author-bio {
            color: #666;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }
        
        .author-stats {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .stat {
            background: rgba(0, 212, 255, 0.1);
            padding: 0.5rem 1rem;
            border-radius: 8px;
            text-align: center;
        }
        
        .stat-number {
            font-size: 1.2rem;
            font-weight: 600;
            color: #00d4ff;
        }
        
        .stat-label {
            font-size: 0.8rem;
            color: #666;
        }
        
        .author-actions {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }
        
        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }
            
            .title {
                font-size: 2rem;
            }
            
            .authors-grid {
                grid-template-columns: 1fr;
            }
            
            .author-header {
                flex-direction: column;
                text-align: center;
            }
            
            .author-avatar {
                margin-right: 0;
                margin-bottom: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/cms/" class="back-btn">‚Üê Back to CMS</a>
        
        <div class="header">
            <h1 class="title">Authors Management</h1>
            <p class="subtitle">Manage your team of AI experts and contributors</p>
            <div style="margin-top: 1rem;">
                <a href="/admin/authors/new" class="btn btn-primary">üë§ Add New Author</a>
            </div>
        </div>
        
        <div class="authors-grid">
            {authors.length === 0 ? (
                <div class="author-card">
                    <h3>No authors found</h3>
                    <p>Add your first author to get started!</p>
                    <a href="/admin/authors/new" class="btn btn-primary">Add First Author</a>
                </div>
            ) : (
                authors.map((author: any) => (
                    <div class="author-card">
                        <div class="author-header">
                            <div class="author-avatar">
                                {author.data.name.charAt(0).toUpperCase()}
                            </div>
                            <div class="author-info">
                                <h2>{author.data.name}</h2>
                                <p class="author-title">{author.data.title || 'AI Expert'}</p>
                            </div>
                        </div>
                        
                        <p class="author-bio">
                            {author.data.bio || 'No bio available'}
                        </p>
                        
                        <div class="author-stats">
                            <div class="stat">
                                <div class="stat-number">5</div>
                                <div class="stat-label">Articles</div>
                            </div>
                            <div class="stat">
                                <div class="stat-number">1.2k</div>
                                <div class="stat-label">Views</div>
                            </div>
                            <div class="stat">
                                <div class="stat-number">4.8</div>
                                <div class="stat-label">Rating</div>
                            </div>
                        </div>
                        
                        <div class="author-actions">
                            <a href={`/authors/${author.slug}`} class="btn btn-primary">
                                View Author
                            </a>
                            <a href={`/admin/authors/edit/${author.slug}`} class="btn btn-secondary">
                                ‚úèÔ∏è Edit
                            </a>
                            <button class="btn btn-secondary" onclick="showDeleteConfirm('{author.slug}')">
                                üóëÔ∏è Delete
                            </button>
                        </div>
                    </div>
                ))
            )}
        </div>
    </div>
    
    <script>
        function showDeleteConfirm(slug: string) {
            if (confirm('Are you sure you want to delete this author? This action cannot be undone.')) {
                alert('Delete functionality will be implemented in the next update. For now, you can delete files manually from the src/content/authors/ directory.');
            }
        }
        
        // Add some interactive effects
        document.querySelectorAll('.author-card').forEach((card: Element) => {
            card.addEventListener('mouseenter', function(this: Element) {
                (this as HTMLElement).style.transform = 'translateY(-4px) scale(1.02)';
            });
            
            card.addEventListener('mouseleave', function(this: Element) {
                (this as HTMLElement).style.transform = 'translateY(0) scale(1)';
            });
        });
    </script>
</body>
</html> 