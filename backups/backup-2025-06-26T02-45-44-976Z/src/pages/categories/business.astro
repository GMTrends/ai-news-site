---
import { getCollection } from 'astro:content';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';

// Get business articles from content collections
const allArticles = await getCollection('articles');
const businessArticles = allArticles
  .filter(article => article.data.category === 'business')
  .sort((a, b) => new Date(b.data.publishedAt || 0).getTime() - new Date(a.data.publishedAt || 0).getTime());

// SEO metadata
const pageTitle = "AI Business & Industry - AI in Business Applications";
const pageDescription = "AI business applications, industry insights, and enterprise AI solutions. Discover how AI is transforming business operations and industry.";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle}</title>
  <meta name="description" content={pageDescription} />
  <meta name="keywords" content="AI business, enterprise AI, AI industry, business AI applications, AI solutions" />
  
  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={pageDescription} />
  <meta property="og:site_name" content="AI Buzz Media" />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={Astro.url} />
  <meta property="twitter:title" content={pageTitle} />
  <meta property="twitter:description" content={pageDescription} />
  
  <link rel="canonical" href={Astro.url} />
</head>
<body>
  <Header />
  
  <main class="category-page">
    <div class="category-hero">
      <div class="container">
        <div class="category-header">
          <div class="category-icon">ðŸ’¼</div>
          <h1 class="category-title">AI Business & Industry</h1>
          <p class="category-description">AI business applications, industry insights, and enterprise AI solutions.</p>
        </div>
      </div>
    </div>
    
    <div class="category-content">
      <div class="container">
        <div class="articles-grid">
          {businessArticles.map((article) => (
            <article class="category-article">
              <div class="article-image">
                {article.data.image ? (
                  <img src={article.data.image} alt={article.data.title} />
                ) : (
                  <div class="placeholder">ðŸ’¼</div>
                )}
              </div>
              <div class="article-content">
                <span class="category-badge business">Business</span>
                <h2><a href={`/business/${article.slug}`}>{article.data.title}</a></h2>
                <p>{article.data.excerpt}</p>
                <div class="article-meta">
                  <span class="author">By {article.data.author || 'Anonymous'}</span>
                  <span class="date">{new Date(article.data.publishedAt || Date.now()).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}</span>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
  
  <style>
    .category-page {
      min-height: 100vh;
      background: var(--bg-primary);
    }
    
    .category-hero {
      background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(37, 99, 235, 0.1) 100%);
      padding: 4rem 0;
      border-bottom: 2px solid rgba(59, 130, 246, 0.2);
    }
    
    .category-header {
      text-align: center;
      max-width: 800px;
      margin: 0 auto;
    }
    
    .category-icon {
      font-size: 4rem;
      margin-bottom: 1rem;
    }
    
    .category-title {
      font-size: 3rem;
      font-weight: 700;
      color: #3b82f6;
      margin-bottom: 1rem;
    }
    
    .category-description {
      font-size: 1.2rem;
      color: #666666;
      line-height: 1.6;
    }
    
    .category-content {
      padding: 4rem 0;
    }
    
    .articles-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 2rem;
    }
    
    .category-article {
      background: #1a1a1b;
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 16px;
      overflow: hidden;
      transition: all 0.3s ease;
    }
    
    .category-article:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 40px rgba(59, 130, 246, 0.2);
      border-color: rgba(59, 130, 246, 0.3);
    }
    
    .article-image {
      height: 200px;
      overflow: hidden;
    }
    
    .article-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .placeholder {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 3rem;
      background: rgba(59, 130, 246, 0.1);
    }
    
    .article-content {
      padding: 1.5rem;
    }
    
    .category-badge {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      border-radius: 12px;
      font-size: 0.7rem;
      font-weight: 600;
      margin-bottom: 1rem;
    }
    
    .category-badge.business {
      background: rgba(59, 130, 246, 0.2);
      color: #3b82f6;
    }
    
    .article-content h2 {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.75rem;
    }
    
    .article-content h2 a {
      color: #ffffff;
      text-decoration: none;
      transition: color 0.3s ease;
    }
    
    .article-content h2 a:hover {
      color: #3b82f6;
    }
    
    .article-content p {
      color: #cccccc;
      line-height: 1.6;
      margin-bottom: 1rem;
    }
    
    .article-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.85rem;
      color: #888888;
    }
    
    .author {
      font-weight: 500;
    }
    
    .date {
      opacity: 0.8;
    }
    
    @media (max-width: 768px) {
      .category-title {
        font-size: 2rem;
      }
      
      .articles-grid {
        grid-template-columns: 1fr;
      }
      
      .category-hero {
        padding: 2rem 0;
      }
      
      .category-content {
        padding: 2rem 0;
      }
    }
  </style>
</body>
</html> 
