---
import { getCollection } from 'astro:content';

export async function load({ props }) {
  const { categorySlug, currentArticleSlug } = props;
  const allArticles = await getCollection('articles');
  const relatedArticles = allArticles
    .filter(article => article.data.category === categorySlug && article.slug !== currentArticleSlug)
    .slice(0, 5);
  return { relatedArticles };
}

const { relatedArticles = [] } = Astro.props;
---

<aside class="article-sidebar">
  <div class="sidebar-card">
    <h3 class="sidebar-title">Related Articles</h3>
    <div class="related-articles">
      {relatedArticles.map((article) => (
        <article class="related-article">
          <h4>
            <a href={`/${article.data.category || 'articles'}/${article.slug}`}>{article.data.title}</a>
          </h4>
          <p>{article.data.excerpt}</p>
        </article>
      ))}
    </div>
  </div>
</aside>

<style>
.article-sidebar {
  width: 100%;
  max-width: 300px;
}
.sidebar-card {
  background: rgba(26, 26, 27, 0.8);
  border-radius: 16px;
  padding: 1.5rem;
  margin-bottom: 2rem;
}
.sidebar-title {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 1rem;
  color: #fff;
}
.related-articles {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}
.related-article h4 a {
  color: #fff;
  text-decoration: none;
  font-size: 1rem;
  transition: color 0.3s ease;
}
.related-article h4 a:hover {
  color: #00d4ff;
}
.related-article p {
  color: #b3b3b3;
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}
@media (max-width: 768px) {
  .article-sidebar {
    max-width: 100%;
  }
}
</style> 