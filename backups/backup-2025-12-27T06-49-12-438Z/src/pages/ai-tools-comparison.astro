<style>
.tools-page-content {
  min-height: 100vh;
}

.seo-content-section {
  padding: 4rem 0;
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(30, 41, 59, 0.8) 100%);
}

.seo-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.seo-content h2 {
  text-align: center;
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 3rem;
  color: #f1f5f9;
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  margin-bottom: 4rem;
}

.benefit-card {
  background: rgba(15, 23, 42, 0.8);
  border: 1px solid #334155;
  border-radius: 12px;
  padding: 2rem;
  text-align: center;
  transition: all 0.3s ease;
}

.benefit-card:hover {
  transform: translateY(-5px);
  border-color: #3b82f6;
  box-shadow: 0 10px 30px rgba(59, 130, 246, 0.1);
}

.benefit-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.benefit-card h3 {
  font-size: 1.3rem;
  font-weight: 700;
  color: #f1f5f9;
  margin-bottom: 1rem;
}

.benefit-card p {
  color: #94a3b8;
  line-height: 1.6;
}

.categories-overview {
  background: rgba(30, 41, 59, 0.5);
  border-radius: 12px;
  padding: 3rem;
  border: 1px solid #475569;
}

.categories-overview h3 {
  text-align: center;
  font-size: 1.8rem;
  font-weight: 700;
  color: #f1f5f9;
  margin-bottom: 2rem;
}

.category-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.category-item {
  padding: 1.5rem;
  background: rgba(15, 23, 42, 0.6);
  border-radius: 8px;
  border: 1px solid #334155;
}

.category-item h4 {
  font-size: 1.2rem;
  font-weight: 600;
  color: #3b82f6;
  margin-bottom: 0.5rem;
}

.category-item p {
  color: #cbd5e1;
  line-height: 1.5;
  margin: 0;
}

@media (max-width: 768px) {
  .seo-container {
    padding: 0 1rem;
  }
  
  .benefits-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  
  .categories-overview {
    padding: 2rem;
  }
  
  .category-list {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
}
</style>
