---
/**
 * Hero Premium Ad Component - Styled to match secondary article cards
 * Designed for maximum revenue potential in prime hero sidebar placement
 */

interface Props {
  className?: string;
  priority?: 'premium' | 'high' | 'medium';
}

const { 
  className = '',
  priority = 'premium'
} = Astro.props;

// Ad configuration for hero placement
const adConfig = {
  title: 'Boost Your AI Workflow',
  description: 'Discover premium AI tools that successful entrepreneurs use to scale their businesses faster',
  cta: 'Explore Tools',
  badge: 'FEATURED',
  icon: 'ðŸš€'
};
---

<article class={`secondary-article ${className}`}>
  <div class="promo-visual-container">
    <div class="promo-icon-wrapper">
      <div class="promo-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z" fill="currentColor"/>
          <path d="M19 15L20.09 18.26L24 19L20.09 19.74L19 23L17.91 19.74L14 19L17.91 18.26L19 15Z" fill="currentColor"/>
          <path d="M5 15L6.09 18.26L10 19L6.09 19.74L5 23L3.91 19.74L0 19L3.91 18.26L5 15Z" fill="currentColor"/>
        </svg>
      </div>
      <div class="ad-sparkles">
        <div class="sparkle sparkle-1"></div>
        <div class="sparkle sparkle-2"></div>
        <div class="sparkle sparkle-3"></div>
      </div>
    </div>
  </div>
  
  <div class="promo-content-wrapper">
    <div class="promo-badge-container">
      <span class="promo-badge">{adConfig.badge}</span>
    </div>
    <div style="height: 6px;"></div>
    <h3 class="promo-title">
      <a href="#" class="promo-link">{adConfig.title}</a>
    </h3>
    <p class="promo-description">{adConfig.description}</p>
    <div class="promo-meta">
      <span class="promo-cta-wrapper">
        <span class="promo-cta">{adConfig.cta}</span>
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" class="promo-arrow">
          <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </span>
    </div>
  </div>
</article>

<style>
/* Hero Premium Ad - Uses Hero component's secondary-article styling */
.secondary-article:hover {
  background: rgba(26, 26, 27, 0.8);
  border: 1px solid rgba(0, 212, 255, 0.3);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 212, 255, 0.1);
}

/* Visual container - matches article-image-small exactly */
.promo-visual-container {
  width: 100px;
  height: 100px;
  border-radius: 8px;
  overflow: hidden;
  flex-shrink: 0;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.promo-icon-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #00d4ff 0%, #0066ff 50%, #9333ea 100%);
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.ad-icon {
  color: white;
  z-index: 2;
  animation: iconPulse 3s ease-in-out infinite;
}

@keyframes iconPulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

/* Sparkle effects */
.ad-sparkles {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.sparkle {
  position: absolute;
  width: 4px;
  height: 4px;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  animation: sparkleFloat 2s ease-in-out infinite;
}

.sparkle-1 {
  top: 20%;
  left: 20%;
  animation-delay: 0s;
}

.sparkle-2 {
  top: 70%;
  right: 25%;
  animation-delay: 0.7s;
}

.sparkle-3 {
  bottom: 30%;
  left: 70%;
  animation-delay: 1.4s;
}

@keyframes sparkleFloat {
  0%, 100% {
    opacity: 0;
    transform: translateY(0px) scale(0);
  }
  50% {
    opacity: 1;
    transform: translateY(-10px) scale(1);
  }
}

/* Content wrapper - matches article-content-small exactly */
.promo-content-wrapper {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.promo-badge-container {
  margin-bottom: 6px;
}

.promo-badge {
  background: rgba(147, 51, 234, 0.2) !important;
  color: #a855f7 !important;
  font-weight: 700;
}

/* Title styling - matches article h3 exactly */
.promo-title {
  font-size: 1rem;
  margin: 0.25rem 0 0.25rem 0;
  line-height: 1.3;
}

.promo-link {
  color: #ffffff;
  text-decoration: none;
  transition: all 0.3s ease;
}

.ad-link:hover {
  color: #00d4ff;
}

/* Description styling - compact for card format */
.promo-description {
  color: #94a3b8;
  font-size: 0.85rem;
  line-height: 1.4;
  margin: 0.5rem 0;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Meta section - matches article-meta-small */
.promo-meta {
  display: flex;
  align-items: center;
  gap: 1rem;
  color: #94a3b8;
  font-size: 0.85rem;
  margin-top: auto;
}

.ad-cta-wrapper {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
  color: white;
  padding: 0.4rem 0.8rem;
  border-radius: 6px;
  font-weight: 600;
  font-size: 0.8rem;
  transition: all 0.3s ease;
}

.hero-premium-ad:hover .ad-cta-wrapper {
  background: linear-gradient(135deg, #0066ff 0%, #9333ea 100%);
  transform: translateX(2px);
}

.ad-arrow {
  transition: transform 0.3s ease;
}

.hero-premium-ad:hover .ad-arrow {
  transform: translateX(2px);
}

/* Responsive design - inherits from Hero component's secondary-article styles */
@media (max-width: 768px) {
  .ad-title {
    font-size: 0.9rem;
  }
  
  .ad-description {
    font-size: 0.8rem;
  }
  
  .promo-meta {
    font-size: 0.8rem;
  }
}

@media (max-width: 480px) {
  .promo-visual-container {
    width: 65px;
    height: 65px;
  }
  
  .ad-title {
    font-size: 0.85rem;
  }
  
  .ad-description {
    font-size: 0.75rem;
  }
  
  .promo-cta-wrapper {
    padding: 0.35rem 0.7rem;
    font-size: 0.75rem;
  }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  .ad-icon {
    animation: none;
  }
  
  .sparkle {
    animation: none;
    opacity: 0.3;
  }
  
  .secondary-article:hover {
    transform: none;
  }
  
  .secondary-article:hover .promo-cta-wrapper {
    transform: none;
  }
  
  .secondary-article:hover .promo-arrow {
    transform: none;
  }
}
</style>

<script>
// Enhanced interaction tracking for hero premium ad
document.addEventListener('DOMContentLoaded', function() {
  const heroPremiumAd = document.querySelector('.secondary-article .promo-content-wrapper') as HTMLElement;
  
  if (heroPremiumAd) {
    // Click tracking
    heroPremiumAd.addEventListener('click', function(e: Event) {
      e.preventDefault();
      
      // Track premium ad click for analytics
      if (typeof (window as any).gtag !== 'undefined') {
        (window as any).gtag('event', 'click', {
          event_category: 'hero_premium_ad',
          event_label: 'hero_sidebar_top',
          value: 1
        });
      }
      
      // Add click effect
      this.style.transform = 'scale(0.98)';
      setTimeout(() => {
        this.style.transform = '';
      }, 150);
      
      // Simulate ad click (replace with actual ad URL)
      console.log('Hero Premium Ad clicked - redirect to advertiser');
    });
    
    // Hover tracking for engagement metrics
    let hoverStartTime: number | undefined;
    heroPremiumAd.addEventListener('mouseenter', function() {
      hoverStartTime = Date.now();
    });
    
    heroPremiumAd.addEventListener('mouseleave', function() {
      if (hoverStartTime) {
        const hoverDuration = Date.now() - hoverStartTime;
        if (hoverDuration > 1000 && typeof (window as any).gtag !== 'undefined') {
          (window as any).gtag('event', 'engagement', {
            event_category: 'hero_premium_ad',
            event_label: 'hover_duration',
            value: Math.round(hoverDuration / 1000)
          });
        }
      }
    });
    
    // Impression tracking
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          if (typeof (window as any).gtag !== 'undefined') {
            (window as any).gtag('event', 'impression', {
              event_category: 'hero_premium_ad',
              event_label: 'hero_sidebar_top',
              value: 1
            });
          }
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.5 });
    
    observer.observe(heroPremiumAd);
  }
});
</script>
