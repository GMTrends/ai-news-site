---
/**
 * Revenue Analytics Dashboard - Track and optimize ad performance
 * Helps achieve $3000-8000/month revenue target through data-driven decisions
 */

import { adManager, RevenueTracker } from '../lib/ad-manager.ts';

interface Props {
  showDetailedMetrics?: boolean;
  timeframe?: '7d' | '30d' | '90d';
  className?: string;
}

const { 
  showDetailedMetrics = true,
  timeframe = '30d',
  className = ''
} = Astro.props;

// Get revenue projections and current performance
const revenueProjection = adManager.getRevenueProjection();
const activeSlots = adManager.getActiveSlots();
const highPerformingSlots = adManager.getHighPerformingSlots();

// Calculate current month progress (simulated data - replace with real analytics)
const currentProgress = {
  displayRevenue: 1200, // Current month so far
  affiliateRevenue: 2100,
  partnerRevenue: 650,
  newsletterRevenue: 280,
  totalRevenue: 4230
};

const progressPercentage = (currentProgress.totalRevenue / revenueProjection.total) * 100;

// Top performing slots (mock data - replace with real analytics)
const topSlots = [
  { id: 'premium-sidebar-1', revenue: 850, ctr: 2.4, impressions: 35400 },
  { id: 'article-banner-top', revenue: 620, ctr: 1.8, impressions: 34500 },
  { id: 'premium-sidebar-2', revenue: 580, ctr: 2.1, impressions: 27600 },
  { id: 'footer-leaderboard', revenue: 420, ctr: 1.5, impressions: 28000 }
];
---

<div class={`revenue-analytics ${className}`}>
  <!-- Revenue Overview Header -->
  <div class="analytics-header">
    <div class="header-content">
      <h2 class="analytics-title">Revenue Analytics Dashboard</h2>
      <div class="timeframe-selector">
        <button class="timeframe-btn active" data-timeframe="7d">7 Days</button>
        <button class="timeframe-btn" data-timeframe="30d">30 Days</button>
        <button class="timeframe-btn" data-timeframe="90d">90 Days</button>
      </div>
    </div>
    <div class="revenue-summary">
      <div class="current-revenue">
        <span class="revenue-amount">${currentProgress.totalRevenue.toLocaleString()}</span>
        <span class="revenue-label">Current Month</span>
      </div>
      <div class="target-revenue">
        <span class="target-amount">${revenueProjection.total.toLocaleString()}</span>
        <span class="target-label">Monthly Target</span>
      </div>
      <div class="progress-indicator">
        <div class="progress-bar">
          <div class="progress-fill" style={`width: ${Math.min(progressPercentage, 100)}%`}></div>
        </div>
        <span class="progress-text">{Math.round(progressPercentage)}% Complete</span>
      </div>
    </div>
  </div>

  <!-- Revenue Breakdown Cards -->
  <div class="revenue-breakdown">
    <div class="revenue-card display-ads">
      <div class="card-header">
        <h3>Display Revenue</h3>
        <span class="revenue-icon">üìä</span>
      </div>
      <div class="card-metrics">
        <div class="current-metric">
          <span class="metric-value">${currentProgress.displayRevenue}</span>
          <span class="metric-change positive">+18%</span>
        </div>
        <div class="target-metric">
          Target: ${revenueProjection.displayRevenue}
        </div>
        <div class="progress-mini">
          <div class="progress-mini-fill" style={`width: ${(currentProgress.displayRevenue / revenueProjection.displayRevenue) * 100}%`}></div>
        </div>
      </div>
    </div>

    <div class="revenue-card affiliate-revenue">
      <div class="card-header">
        <h3>Affiliate Revenue</h3>
        <span class="revenue-icon">ü§ù</span>
      </div>
      <div class="card-metrics">
        <div class="current-metric">
          <span class="metric-value">${currentProgress.affiliateRevenue}</span>
          <span class="metric-change positive">+24%</span>
        </div>
        <div class="target-metric">
          Target: ${revenueProjection.affiliateRevenue}
        </div>
        <div class="progress-mini">
          <div class="progress-mini-fill" style={`width: ${(currentProgress.affiliateRevenue / revenueProjection.affiliateRevenue) * 100}%`}></div>
        </div>
      </div>
    </div>

    <div class="revenue-card partner-content">
      <div class="card-header">
        <h3>Partner Content</h3>
        <span class="revenue-icon">‚ú®</span>
      </div>
      <div class="card-metrics">
        <div class="current-metric">
          <span class="metric-value">${currentProgress.partnerRevenue}</span>
          <span class="metric-change positive">+12%</span>
        </div>
        <div class="target-metric">
          Target: ${revenueProjection.partnerRevenue}
        </div>
        <div class="progress-mini">
          <div class="progress-mini-fill" style={`width: ${(currentProgress.partnerRevenue / revenueProjection.partnerRevenue) * 100}%`}></div>
        </div>
      </div>
    </div>

    <div class="revenue-card newsletter-revenue">
      <div class="card-header">
        <h3>Newsletter Revenue</h3>
        <span class="revenue-icon">üìß</span>
      </div>
      <div class="card-metrics">
        <div class="current-metric">
          <span class="metric-value">${currentProgress.newsletterRevenue}</span>
          <span class="metric-change positive">+8%</span>
        </div>
        <div class="target-metric">
          Target: ${revenueProjection.newsletterRevenue}
        </div>
        <div class="progress-mini">
          <div class="progress-mini-fill" style={`width: ${(currentProgress.newsletterRevenue / revenueProjection.newsletterRevenue) * 100}%`}></div>
        </div>
      </div>
    </div>
  </div>

  {showDetailedMetrics && (
    <div class="detailed-analytics">
      <!-- Top Performing Slots -->
      <div class="performance-section">
        <h3 class="section-title">Top Performing Content Slots</h3>
        <div class="slots-table">
          <div class="table-header">
            <span>Slot Name</span>
            <span>Revenue</span>
            <span>CTR</span>
            <span>Impressions</span>
            <span>Status</span>
          </div>
          {topSlots.map(slot => {
            const slotConfig = adManager.getAdSlot(slot.id);
            return (
              <div class="table-row">
                <span class="slot-name">{slotConfig?.name || slot.id}</span>
                <span class="slot-revenue">${slot.revenue}</span>
                <span class="slot-ctr">{slot.ctr}%</span>
                <span class="slot-impressions">{slot.impressions.toLocaleString()}</span>
                <span class="slot-status active">Active</span>
              </div>
            );
          })}
        </div>
      </div>

      <!-- Optimization Recommendations -->
      <div class="optimization-section">
        <h3 class="section-title">Revenue Optimization Recommendations</h3>
        <div class="recommendations">
          <div class="recommendation high-priority">
            <div class="rec-icon">üöÄ</div>
            <div class="rec-content">
              <h4>Increase Premium Sidebar Slots</h4>
              <p>Your sidebar slots are performing 40% above average. Consider adding more premium placements.</p>
              <span class="potential-revenue">+$800/month potential</span>
            </div>
          </div>
          
          <div class="recommendation medium-priority">
            <div class="rec-icon">üìà</div>
            <div class="rec-content">
              <h4>Optimize Article Middle Placement</h4>
              <p>A/B test different creative formats in article content areas for higher engagement.</p>
              <span class="potential-revenue">+$400/month potential</span>
            </div>
          </div>

          <div class="recommendation medium-priority">
            <div class="rec-icon">üéØ</div>
            <div class="rec-content">
              <h4>Enhanced Targeting Keywords</h4>
              <p>Add "enterprise AI" and "business automation" to targeting for higher CPM rates.</p>
              <span class="potential-revenue">+$300/month potential</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Revenue Forecast -->
      <div class="forecast-section">
        <h3 class="section-title">Revenue Forecast</h3>
        <div class="forecast-chart">
          <div class="forecast-bars">
            <div class="forecast-bar">
              <div class="bar-fill current" style="height: 60%"></div>
              <span class="bar-label">Current</span>
              <span class="bar-value">$4.2K</span>
            </div>
            <div class="forecast-bar">
              <div class="bar-fill projected" style="height: 85%"></div>
              <span class="bar-label">Projected</span>
              <span class="bar-value">$5.8K</span>
            </div>
            <div class="forecast-bar">
              <div class="bar-fill target" style="height: 100%"></div>
              <span class="bar-label">Target</span>
              <span class="bar-value">$6.4K</span>
            </div>
          </div>
          <div class="forecast-insights">
            <p>With current optimization trends, you're on track to reach <strong>91% of your revenue target</strong> this month.</p>
            <p>Implementing the above recommendations could push you to <strong>110% of target</strong>.</p>
          </div>
        </div>
      </div>
    </div>
  )}
</div>

<script is:inline>
  // Interactive functionality for the analytics dashboard
  document.addEventListener('DOMContentLoaded', function() {
    // Timeframe selector functionality
    const timeframeBtns = document.querySelectorAll('.timeframe-btn');
    timeframeBtns.forEach(function(btn) {
      btn.addEventListener('click', function() {
        timeframeBtns.forEach(function(b) { b.classList.remove('active'); });
        btn.classList.add('active');
        
        // Here you would typically fetch new data based on timeframe
        const timeframe = btn.getAttribute('data-timeframe');
        console.log('Loading data for timeframe: ' + timeframe);
        
        // Simulate data refresh
        updateAnalyticsData(timeframe || '30d');
      });
    });

    // Real-time revenue tracking
    function updateAnalyticsData(timeframe) {
      // This would typically make an API call to get fresh data
      const progressFill = document.querySelector('.progress-fill');
      const progressText = document.querySelector('.progress-text');
      
      // Simulate slight progress increase
      setTimeout(function() {
        if (progressFill && progressText) {
          const currentWidth = parseFloat(progressFill.style.width) || 66;
          const newWidth = Math.min(currentWidth + Math.random() * 2, 100);
          
          progressFill.style.width = newWidth + '%';
          progressText.textContent = Math.round(newWidth) + '% Complete';
        }
      }, 500);
    }

    // Auto-refresh analytics every 5 minutes
    setInterval(function() {
      updateAnalyticsData('current');
    }, 300000);

    // Track analytics page views
    try {
      if (window.gtag) {
        window.gtag('event', 'analytics_view', {
          'custom_parameter_1': 'revenue_dashboard',
          'custom_parameter_2': 'admin_analytics'
        });
      }
    } catch (e) {
      console.log('Analytics tracking not available');
    }
  });
</script>

