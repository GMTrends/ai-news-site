---
// Custom CMS Page - No external dependencies
const pageTitle = 'Content Management System';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{pageTitle} - AI Buzz Media</title>
    <meta name="description" content="Content management system for AI Buzz Media">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: #333;
        }
        
        .cms-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }
        
        .cms-header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .cms-title {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }
        
        .cms-subtitle {
            color: #666;
            font-size: 1.1rem;
        }
        
        .cms-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 2rem;
            margin-bottom: 2rem;
        }
        
        .cms-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .cms-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        }
        
        .card-header {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
        }
        
        .card-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-right: 1rem;
        }
        
        .articles-icon { background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%); color: white; }
        .authors-icon { background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%); color: white; }
        .categories-icon { background: linear-gradient(135deg, #a8e6cf 0%, #56ab2f 100%); color: white; }
        .settings-icon { background: linear-gradient(135deg, #ffd93d 0%, #ff6b6b 100%); color: white; }
        
        .card-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #333;
        }
        
        .card-description {
            color: #666;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }
        
        .card-actions {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }
        
        .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-size: 0.95rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
            color: white;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 212, 255, 0.3);
        }
        
        .btn-secondary {
            background: rgba(0, 0, 0, 0.05);
            color: #333;
            border: 1px solid rgba(0, 0, 0, 0.1);
        }
        
        .btn-secondary:hover {
            background: rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }
        
        .btn-danger {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            color: white;
        }
        
        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 107, 107, 0.3);
        }
        
        .back-btn {
            position: fixed;
            top: 2rem;
            left: 2rem;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            color: #333;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        
        .back-btn:hover {
            background: rgba(255, 255, 255, 1);
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }
        
        .stat-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: #00d4ff;
            margin-bottom: 0.5rem;
        }
        
        .stat-label {
            color: #666;
            font-size: 0.9rem;
        }
        
        @media (max-width: 768px) {
            .cms-container {
                padding: 1rem;
            }
            
            .cms-grid {
                grid-template-columns: 1fr;
            }
            
            .cms-title {
                font-size: 2rem;
            }
            
            .back-btn {
                position: static;
                margin-bottom: 1rem;
                display: inline-block;
            }
        }
    </style>
</head>
<body>
    <a href="/admin/" class="back-btn">‚Üê Back to Admin</a>
    
    <div class="cms-container">
        <div class="cms-header">
            <h1 class="cms-title">Content Management System</h1>
            <p class="cms-subtitle">Manage your AI Buzz Media content with ease</p>
        </div>
        
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number">2</div>
                <div class="stat-label">Articles</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">2</div>
                <div class="stat-label">Authors</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">6</div>
                <div class="stat-label">Categories</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">1</div>
                <div class="stat-label">Pages</div>
            </div>
        </div>
        
        <div class="cms-grid">
            <!-- Articles Management -->
            <div class="cms-card">
                <div class="card-header">
                    <div class="card-icon articles-icon">üìù</div>
                    <h2 class="card-title">Articles</h2>
                </div>
                <p class="card-description">
                    Create, edit, and manage your AI news articles. Add featured images, categories, and SEO metadata.
                </p>
                <div class="card-actions">
                    <a href="/admin/articles" class="btn btn-primary">View Articles</a>
                    <a href="/admin/articles/new" class="btn btn-secondary">Create New</a>
                </div>
            </div>
            
            <!-- Authors Management -->
            <div class="cms-card">
                <div class="card-header">
                    <div class="card-icon authors-icon">üë§</div>
                    <h2 class="card-title">Authors</h2>
                </div>
                <p class="card-description">
                    Manage your team of AI experts and contributors. Add bios, credentials, and social links.
                </p>
                <div class="card-actions">
                    <a href="/admin/authors" class="btn btn-primary">View Authors</a>
                    <a href="/admin/authors/new" class="btn btn-secondary">Add Author</a>
                </div>
            </div>
            
            <!-- Categories Management -->
            <div class="cms-card">
                <div class="card-header">
                    <div class="card-icon categories-icon">üè∑Ô∏è</div>
                    <h2 class="card-title">Categories</h2>
                </div>
                <p class="card-description">
                    Organize your content with categories like AI News, Reviews, Tutorials, and more.
                </p>
                <div class="card-actions">
                    <a href="/admin/categories" class="btn btn-primary">View Categories</a>
                    <a href="/admin/categories/new" class="btn btn-secondary">Add Category</a>
                </div>
            </div>
            
            <!-- Site Settings -->
            <div class="cms-card">
                <div class="card-header">
                    <div class="card-icon settings-icon">‚öôÔ∏è</div>
                    <h2 class="card-title">Site Settings</h2>
                </div>
                <p class="card-description">
                    Configure your site's appearance, SEO settings, and global preferences.
                </p>
                <div class="card-actions">
                    <a href="/admin/settings" class="btn btn-primary">Site Settings</a>
                    <a href="/admin/analytics" class="btn btn-secondary">Analytics</a>
                </div>
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="cms-card">
            <h3 style="margin-bottom: 1rem; color: #333;">Quick Actions</h3>
            <div class="card-actions">
                <a href="/admin/articles/new" class="btn btn-primary">üìù Write New Article</a>
                <a href="/admin/authors/new" class="btn btn-secondary">üë§ Add New Author</a>
                <a href="/admin/categories/new" class="btn btn-secondary">üè∑Ô∏è Create Category</a>
                <a href="/admin/backup" class="btn btn-secondary">üíæ Backup Content</a>
                <a href="/admin/export" class="btn btn-secondary">üì§ Export Data</a>
            </div>
        </div>
    </div>
    
    <script>
        // Simple functionality for the custom CMS
        document.addEventListener('DOMContentLoaded', function() {
            // Add click handlers for navigation
            document.querySelectorAll('a[href^="/admin/"]').forEach((link: Element) => {
                link.addEventListener('click', function(this: Element, e: Event) {
                    const href = (this as HTMLAnchorElement).getAttribute('href');
                    if (href === '/admin/' || href === '/admin') {
                        return; // Allow normal navigation for back button
                    }
                    
                    // Allow navigation to actual admin pages
                    if (href === '/admin/articles' || href === '/admin/authors' || href === '/admin/categories' || href === '/admin/settings') {
                        return; // Allow normal navigation
                    }
                    
                    e.preventDefault();
                    
                    // Show a simple message for unimplemented features
                    alert('This feature will be implemented in the next update. For now, you can manage content by editing files directly in the src/content/ directory.');
                });
            });
            
            // Add some interactive effects
            document.querySelectorAll('.cms-card').forEach((card: Element) => {
                card.addEventListener('mouseenter', function(this: Element) {
                    (this as HTMLElement).style.transform = 'translateY(-4px) scale(1.02)';
                });
                
                card.addEventListener('mouseleave', function(this: Element) {
                    (this as HTMLElement).style.transform = 'translateY(0) scale(1)';
                });
            });
        });
    </script>
</body>
</html> 