---
// Author Edit Page
import { getCollection } from 'astro:content';

interface AuthorData {
    name: string;
    title?: string;
    bio?: string;
    email?: string;
    twitter?: string;
}

interface Author {
    slug: string;
    data: AuthorData;
}

export async function getStaticPaths() {
    const authors = await getCollection('authors');
    return authors.map((author: any) => ({
        params: { slug: author.slug },
        props: { author }
    }));
}

const { author }: { author: Author } = Astro.props;
const pageTitle = `Edit Author: ${author.data.name}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{pageTitle} - AI Buzz Media</title>
    <meta name="description" content="Edit author for AI Buzz Media">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: #333;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
        }
        
        .header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .title {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }
        
        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            color: #333;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            margin-bottom: 1rem;
        }
        
        .back-btn:hover {
            background: rgba(255, 255, 255, 1);
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }
        
        .edit-form {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .author-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            margin: 0 auto 2rem;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            display: block;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #333;
        }
        
        .form-input, .form-textarea {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            font-size: 1rem;
            font-family: inherit;
            background: rgba(255, 255, 255, 0.9);
            transition: border-color 0.3s ease;
        }
        
        .form-input:focus, .form-textarea:focus {
            outline: none;
            border-color: #00d4ff;
            box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
        }
        
        .form-textarea {
            min-height: 120px;
            resize: vertical;
        }
        
        .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-size: 0.95rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            margin-right: 1rem;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
            color: white;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 212, 255, 0.3);
        }
        
        .btn-secondary {
            background: rgba(0, 0, 0, 0.05);
            color: #333;
            border: 1px solid rgba(0, 0, 0, 0.1);
        }
        
        .btn-secondary:hover {
            background: rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }
        
        .form-actions {
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }
        
        .info-box {
            background: rgba(0, 212, 255, 0.1);
            border: 1px solid rgba(0, 212, 255, 0.2);
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .info-box h3 {
            color: #00d4ff;
            margin-bottom: 0.5rem;
        }
        
        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }
            
            .title {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/admin/authors" class="back-btn">‚Üê Back to Authors</a>
        
        <div class="header">
            <h1 class="title">Edit Author</h1>
            <p>Editing: {author.data.name}</p>
        </div>
        
        <div class="edit-form">
            <div class="author-avatar">
                {author.data.name.charAt(0).toUpperCase()}
            </div>
            
            <div class="info-box">
                <h3>üìù Manual Editing Required</h3>
                <p>This is a lightweight CMS. To edit this author, you'll need to manually edit the file at:</p>
                <code>src/content/authors/{author.slug}.md</code>
            </div>
            
            <form id="editForm">
                <div class="form-group">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-input" value={author.data.name} readonly>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Title</label>
                    <input type="text" class="form-input" value={author.data.title || 'AI Expert'} readonly>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Bio</label>
                    <textarea class="form-textarea" readonly>{author.data.bio || 'No bio available'}</textarea>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-input" value={author.data.email || 'No email available'} readonly>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Twitter</label>
                    <input type="text" class="form-input" value={author.data.twitter || 'No Twitter available'} readonly>
                </div>
                
                <div class="form-actions">
                    <a href={`/authors/${author.slug}`} class="btn btn-primary">
                        View Author
                    </a>
                    <button type="button" class="btn btn-secondary" onclick="openFileEditor()">
                        üìÅ Open File Editor
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="copyFilePath()">
                        üìã Copy File Path
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <script>
        function openFileEditor() {
            const filePath = `src/content/authors/{author.slug}.md`;
            alert(`To edit this author, open the file:\n\n${filePath}\n\nIn your code editor (VS Code, etc.)`);
        }
        
        function copyFilePath() {
            const filePath = `src/content/authors/{author.slug}.md`;
            navigator.clipboard.writeText(filePath).then(() => {
                alert('File path copied to clipboard!');
            }).catch(() => {
                alert(`File path: ${filePath}`);
            });
        }
    </script>
</body>
</html> 