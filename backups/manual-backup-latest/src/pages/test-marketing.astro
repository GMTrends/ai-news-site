---
// Minimal test page to isolate the category page issue
import { getCategoryData } from '../data/categoryData.ts';

// Test without Sanity data first
const categoryData = getCategoryData('marketing');
console.log('Category data:', categoryData);

// Simple test data instead of Sanity
const testArticles = [
  {
    title: "Test Article 1",
    slug: "test-1",
    excerpt: "This is a test article",
    publishedAt: "2024-01-01"
  }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Test Marketing Page</title>
</head>
<body>
  <h1>Test Marketing Category Page</h1>
  
  {categoryData ? (
    <div>
      <h2>{categoryData.title}</h2>
      <p>{categoryData.description}</p>
      <p>Tools Count: {categoryData.toolsCount}</p>
    </div>
  ) : (
    <p>No category data found</p>
  )}
  
  <h3>Test Articles:</h3>
  {testArticles.map(article => (
    <div>
      <h4>{article.title}</h4>
      <p>{article.excerpt}</p>
    </div>
  ))}
  
  <p>If you can see this page, the basic Astro rendering is working.</p>
</body>
</html>
