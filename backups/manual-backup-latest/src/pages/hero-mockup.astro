<style>
	/* Mockup Notice Styles */
	.mockup-notice {
		display: none;
		background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
		color: white;
		padding: 0.5rem 0;
		text-align: center;
		border-bottom: 3px solid #60a5fa;
	}

	.notice-content h2 {
		margin: 0 0 0.5rem 0;
		font-size: 1.5rem;
		font-weight: 700;
	}

	.notice-content p {
		margin: 0;
		opacity: 0.9;
		max-width: 800px;
		margin: 0 auto;
	}

	/* Modern Premium Design System */
	:root {
		--site-header-h: 80px;
		
		/* Modern Dark Theme */
		--bg-primary: #0a0e1a;
		--bg-secondary: #111827;
		--bg-tertiary: #1f2937;
		--bg-glass: rgba(17, 24, 39, 0.8);
		--bg-card: rgba(31, 41, 55, 0.9);
		
		/* Premium Accent Colors */
		--accent-gold: #f59e0b;
		--accent-gold-light: #fbbf24;
		--accent-blue: #3b82f6;
		--accent-purple: #8b5cf6;
		--accent-emerald: #10b981;
		
		/* Typography */
		--text-primary: #ffffff;
		--text-secondary: #e5e7eb;
		--text-muted: #9ca3af;
		--text-accent: #f59e0b;
		
		/* Borders & Shadows */
		--border-subtle: rgba(255, 255, 255, 0.1);
		--border-accent: rgba(245, 158, 11, 0.3);
		--shadow-premium: 0 25px 50px -12px rgba(0, 0, 0, 0.6);
		--shadow-card: 0 20px 25px -5px rgba(0, 0, 0, 0.4);
		--shadow-glow: 0 0 30px rgba(245, 158, 11, 0.15);
		
		/* Glass Morphism */
		--glass-bg: rgba(255, 255, 255, 0.05);
		--glass-border: rgba(255, 255, 255, 0.1);
		--backdrop-blur: blur(20px);
	}

	/* Hero Section - Premium Layout */
	.hero-redesigned {
		background: 
			radial-gradient(circle at 20% 30%, rgba(245, 158, 11, 0.08) 0%, transparent 50%),
			radial-gradient(circle at 80% 70%, rgba(59, 130, 246, 0.06) 0%, transparent 50%),
			linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
		min-height: 120vh;
		position: relative;
		overflow: hidden;
		display: flex;
		flex-direction: column;
		padding: 2rem 0 4rem 0;
	}

	.hero-redesigned::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 25% 25%, rgba(245, 158, 11, 0.1) 0%, transparent 40%),
			radial-gradient(circle at 75% 75%, rgba(139, 92, 246, 0.08) 0%, transparent 40%);
		animation: backgroundFloat 20s ease-in-out infinite;
		pointer-events: none;
	}

	@keyframes backgroundFloat {
		0%, 100% { transform: translateY(0px) scale(1); }
		50% { transform: translateY(-10px) scale(1.02); }
	}

	.hero-container-new {
		max-width: 1400px;
		height: 100%;
		margin: 0 auto;
		padding: 0 2rem;
		display: flex;
		flex-direction: column;
		gap: 3rem;
		position: relative;
		z-index: 1;
	}

	/* Premium Header */
	.hero-header-premium {
		text-align: center;
		max-width: 900px;
		margin: 0 auto;
	}

	.authority-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		background: var(--glass-bg);
		backdrop-filter: var(--backdrop-blur);
		border: 1px solid var(--glass-border);
		padding: 0.5rem 1rem;
		border-radius: 50px;
		color: var(--accent-gold);
		font-size: 0.875rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		box-shadow: var(--shadow-glow);
		position: relative;
	}

	.badge-pulse {
		width: 8px;
		height: 8px;
		background: var(--accent-gold);
		border-radius: 50%;
		animation: pulse 2s infinite;
	}

	@keyframes pulse {
		0%, 100% { opacity: 1; transform: scale(1); }
		50% { opacity: 0.7; transform: scale(1.1); }
	}

	.badge-text {
		letter-spacing: 0.5px;
		text-transform: uppercase;
	}

	.badge-icon {
		font-size: 1rem;
	}

	.hero-title-modern {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 900;
		line-height: 1.1;
		letter-spacing: -0.02em;
		color: var(--text-primary);
		margin: 0 0 1rem 0;
		background: linear-gradient(135deg, #ffffff 0%, #e5e7eb 50%, #f59e0b 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
	}

	.hero-subtitle-modern {
		font-size: 1.25rem;
		color: var(--text-secondary);
		line-height: 1.6;
		margin: 0 0 2rem 0;
		max-width: 700px;
		margin-left: auto;
		margin-right: auto;
		font-weight: 400;
	}

	/* Enhanced Newsletter CTA - 2 Column Layout */
	.newsletter-cta {
		background: linear-gradient(135deg, 
			rgba(245, 158, 11, 0.15) 0%, 
			rgba(251, 191, 36, 0.1) 50%, 
			rgba(245, 158, 11, 0.15) 100%);
		backdrop-filter: blur(20px);
		border: 2px solid rgba(245, 158, 11, 0.3);
		border-radius: 24px;
		margin: 1rem auto;
		max-width: 900px;
		position: relative;
		overflow: hidden;
		box-shadow: 
			0 20px 40px -10px rgba(245, 158, 11, 0.2),
			0 0 0 1px rgba(245, 158, 11, 0.1);
	}

	.cta-container {
		position: relative;
		z-index: 2;
	}

	.lead-magnet-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 2rem;
		padding: 2rem;
		align-items: start;
		min-height: 350px;
	}

	.premium-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		background: linear-gradient(45deg, var(--accent-gold), #fbbf24);
		color: #000;
		font-size: 0.75rem;
		font-weight: 800;
		padding: 0.5rem 1rem;
		border-radius: 20px;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		margin-bottom: 1rem;
		box-shadow: 0 4px 12px rgba(245, 158, 11, 0.4);
		animation: pulse-glow 2s infinite;
	}

	@keyframes pulse-glow {
		0%, 100% { box-shadow: 0 4px 12px rgba(245, 158, 11, 0.4); }
		50% { box-shadow: 0 4px 20px rgba(245, 158, 11, 0.6); }
	}

	.badge-icon {
		font-size: 1rem;
		animation: bounce 2s infinite;
	}

	@keyframes bounce {
		0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
		40% { transform: translateY(-3px); }
		60% { transform: translateY(-1px); }
	}

	.cta-headline {
		font-size: 1.5rem;
		font-weight: 800;
		color: var(--text-primary);
		margin: 0 0 1rem 0;
		line-height: 1.2;
		text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
	}

	.cta-subtitle {
		color: var(--text-secondary);
		font-size: 1rem;
		line-height: 1.5;
		margin: 0 0 2rem 0;
		opacity: 0.9;
	}

	.vault-offer {
		background: var(--glass-bg);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(245, 158, 11, 0.2);
		border-radius: 16px;
		padding: 1rem;
		margin-bottom: 1rem;
		position: relative;
	}

	.free-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		background: linear-gradient(45deg, #dc2626, #ef4444);
		color: white;
		font-size: 0.875rem;
		font-weight: 800;
		padding: 0.5rem 1rem;
		border-radius: 12px;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		margin-bottom: 1rem;
		box-shadow: 0 4px 12px rgba(220, 38, 38, 0.4);
		animation: pulse-red 2s infinite;
	}

	@keyframes pulse-red {
		0%, 100% { box-shadow: 0 4px 12px rgba(220, 38, 38, 0.4); }
		50% { box-shadow: 0 4px 20px rgba(220, 38, 38, 0.6); }
	}

	.gift-icon {
		animation: wiggle 1.5s ease-in-out infinite;
	}

	@keyframes wiggle {
		0%, 100% { transform: rotate(0deg); }
		25% { transform: rotate(-10deg); }
		75% { transform: rotate(10deg); }
	}

	.offer-title {
		color: var(--text-primary);
		font-size: 1.1rem;
		font-weight: 700;
		margin: 0 0 0.25rem 0;
	}

	.offer-description {
		color: var(--text-secondary);
		font-size: 0.8rem;
		line-height: 1.3;
		margin: 0;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.benefits-grid {
		display: grid;
		gap: 0.75rem;
		margin-bottom: 1.25rem;
		text-align: left;
	}

	.benefit-item {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		background: rgba(245, 158, 11, 0.05);
		border: 1px solid rgba(245, 158, 11, 0.1);
		border-radius: 12px;
		padding: 0.75rem;
		transition: all 0.3s ease;
	}

	.benefit-item:hover {
		background: rgba(245, 158, 11, 0.1);
		border-color: rgba(245, 158, 11, 0.2);
		transform: translateX(4px);
	}

	.benefit-icon {
		font-size: 1.25rem;
		flex-shrink: 0;
	}

	.benefit-text {
		color: var(--text-secondary);
		font-size: 0.95rem;
		font-weight: 500;
	}

	.cta-headline {
		color: var(--text-primary);
		font-size: 1.125rem;
		font-weight: 600;
		margin-bottom: 0.75rem;
	}

	.form-group {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		margin-bottom: 1rem;
	}

	.cta-input {
		background: var(--glass-bg);
		border: 2px solid rgba(245, 158, 11, 0.2);
		border-radius: 12px;
		padding: 1rem 1.25rem;
		color: var(--text-primary);
		font-size: 1rem;
		backdrop-filter: blur(10px);
