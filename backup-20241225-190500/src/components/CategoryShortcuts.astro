<style>
.category-shortcuts {
	padding: 4rem 0;
	background: linear-gradient(135deg, rgba(0, 212, 255, 0.03) 0%, rgba(0, 102, 255, 0.03) 100%);
}

.shortcuts-container {
	max-width: 1200px;
	margin: 0 auto;
	padding: 0 2rem;
}

.shortcuts-title {
	text-align: center;
	font-size: 2.5rem;
	font-weight: 700;
	margin-bottom: 3rem;
	background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	background-clip: text;
}

.shortcuts-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
	gap: 2rem;
}

.shortcut-button {
	display: flex;
	align-items: center;
	gap: 1.5rem;
	background: #1a1a1b;
	backdrop-filter: blur(10px);
	border: 1px solid rgba(255, 255, 255, 0.1);
	border-radius: 16px;
	padding: 2rem;
	text-decoration: none;
	transition: all 0.3s ease;
	position: relative;
	overflow: hidden;
}

.shortcut-button::before {
	content: '';
	position: absolute;
	top: 0;
	left: -100%;
	width: 100%;
	height: 100%;
	background: linear-gradient(90deg, transparent, rgba(0, 212, 255, 0.1), transparent);
	transition: left 0.5s ease;
}

.shortcut-button:hover::before {
	left: 100%;
}

.shortcut-button:hover {
	transform: translateY(-8px);
	box-shadow: 0 20px 50px rgba(0, 212, 255, 0.2);
	border-color: rgba(0, 212, 255, 0.3);
}

.shortcut-icon {
	font-size: 3rem;
	width: 80px;
	height: 80px;
	display: flex;
	align-items: center;
	justify-content: center;
	background: linear-gradient(135deg, rgba(0, 212, 255, 0.2) 0%, rgba(0, 102, 255, 0.2) 100%);
	border-radius: 50%;
	flex-shrink: 0;
	position: relative;
	z-index: 2;
}

.shortcut-content {
	flex: 1;
	position: relative;
	z-index: 2;
}

.shortcut-content h3 {
	font-size: 1.5rem;
	font-weight: 600;
	margin-bottom: 0.5rem;
	color: #ffffff;
	transition: color 0.3s ease;
}

.shortcut-content p {
	color: #b3b3b3;
	font-size: 1rem;
	margin: 0;
	transition: color 0.3s ease;
}

.shortcut-button:hover .shortcut-content h3 {
	background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	background-clip: text;
}

.shortcut-button:hover .shortcut-content p {
	color: #ffffff;
}

