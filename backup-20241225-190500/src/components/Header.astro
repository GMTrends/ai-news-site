---
import HeaderLink from './HeaderLink.astro';
import MobileNav from './MobileNav.astro';
import { SITE_TITLE } from '../consts';
---

<header class="ai-header">
	<nav class="nav-container">
		<div class="logo-section">
			<h2 class="site-title">
				<a href="/" target="_blank" rel="noopener noreferrer">{SITE_TITLE}</a>
			</h2>
			<p class="tagline">AI News & Insights</p>
		</div>
		
		<!-- Desktop Navigation -->
		<div class="nav-links desktop-nav">
			<HeaderLink href="/categories/ai-news">AI News</HeaderLink>
			<HeaderLink href="/categories/reviews">Reviews</HeaderLink>
			<HeaderLink href="/categories/tutorials">Tutorials</HeaderLink>
			<HeaderLink href="/categories/business">Business</HeaderLink>
			<HeaderLink href="/categories/finance">Finance</HeaderLink>
			<HeaderLink href="/categories/ai-agents">AI Agents</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</div>
		
		<!-- Mobile Navigation -->
		<div class="mobile-nav">
			<MobileNav />
		</div>
	</nav>
</header>

<style>
:root {
  --gradient-primary: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
  --gradient-secondary: linear-gradient(135deg, rgba(0, 212, 255, 0.8) 0%, rgba(0, 102, 255, 0.8) 100%);
  --color-text: #ffffff;
  --color-text-secondary: #b3b3b3;
  --color-bg: #1a1a1b;
  --border-color: rgba(255, 255, 255, 0.1);
  --glow-primary: 0 0 20px rgba(0, 212, 255, 0.3);
  --glow-secondary: 0 0 30px rgba(0, 212, 255, 0.5);
}

.ai-header {
	background: rgba(10, 10, 11, 0.85);
	backdrop-filter: blur(24px) saturate(180%);
	-webkit-backdrop-filter: blur(24px) saturate(180%);
	border-bottom: 1.5px solid rgba(0, 212, 255, 0.35);
	box-shadow:
		0 12px 40px rgba(0, 212, 255, 0.18),
		0 8px 32px rgba(0, 0, 0, 0.18),
		0 2px 16px rgba(0, 212, 255, 0.12),
		inset 0 2px 0 rgba(255, 255, 255, 0.08);
	padding: 1.5rem 0;
	position: sticky;
	top: 0;
	z-index: 100;
	transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.ai-header::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: linear-gradient(135deg, 
		rgba(0, 212, 255, 0.03) 0%, 
		rgba(0, 102, 255, 0.02) 50%, 
		rgba(168, 85, 247, 0.03) 100%
	);
	pointer-events: none;
}

.nav-container {
	max-width: 1200px;
	margin: 0 auto;
	padding: 0 2rem;
	display: flex;
	justify-content: space-between;
	align-items: center;
	position: relative;
	z-index: 1;
}

.logo-section {
	display: flex;
	flex-direction: column;
	gap: 0.25rem;
}

.site-title {
	margin: 0;
	font-size: 1.8rem;
	font-weight: 700;  /* Reduced from 900 */
	letter-spacing: 0.5px;  /* Much more spacious */
	font-family: 'Space Grotesk', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.site-title a {
	background: var(--gradient-primary);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	background-clip: text;
	text-decoration: none;
	transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
	position: relative;
	display: inline-block;
	text-shadow: 0 0 40px rgba(0, 212, 255, 0.5);
	filter: drop-shadow(0 0 8px rgba(0, 212, 255, 0.3));
}

.site-title a::before {
	content: '';
	position: absolute;
	top: -2px;
	left: -2px;
	right: -2px;
	bottom: -2px;
	background: var(--gradient-primary);
	opacity: 0;
	filter: blur(8px);
	transition: opacity 0.4s ease;
	z-index: -1;
}

.site-title a:hover {
	transform: translateY(-2px) scale(1.02);
	filter: 
		drop-shadow(0 4px 20px rgba(0, 212, 255, 0.4))
		brightness(1.3)  /* Makes title brighter on hover */
		saturate(1.2);   /* More vivid colors */
	text-shadow: 0 0 20px rgba(255, 255, 255, 0.8);  /* White glow for brightness */
}

.site-title a:hover::before {
	opacity: 0.15;
}

.tagline {
	font-size: 0.75rem;
	color: #888888;
	margin: 0;
	text-transform: uppercase;
	letter-spacing: 1px;
	font-weight: 600;
	opacity: 0.8;
	transition: all 0.3s ease;
}

.site-title:hover + .tagline {
	color: #00d4ff;
	opacity: 0.9;  /* Slightly less bright than title */
	text-shadow: 0 0 8px rgba(0, 212, 255, 0.2);  /* Subtle glow */
}

.desktop-nav {
	display: flex;
	gap: 0.5rem;
	align-items: center;
}

.desktop-nav :global(a) {
	color: var(--color-text-secondary);
	text-decoration: none;
	font-weight: 500;
	transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	padding: 0.5rem 0.87rem;
	border-radius: 12px;
	background: transparent;
	position: relative;
	overflow: hidden;
	border: 1px solid transparent;
	backdrop-filter: blur(8px);
}

.desktop-nav :global(a)::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: var(--gradient-primary);
	opacity: 0;
	transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	z-index: -1;
}

.desktop-nav :global(a)::after {
	content: '';
	position: absolute;
	top: 0;
	left: -100%;
	width: 100%;
	height: 100%;
	background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
	transition: left 0.6s ease;
	z-index: -1;
}

.desktop-nav :global(a):hover {
	color: var(--color-text);
	transform: translateY(-2px) scale(1.05);
	border-color: rgba(0, 212, 255, 0.3);
	box-shadow: 
		0 8px 25px rgba(0, 212, 255, 0.2),
		inset 0 1px 0 rgba(255, 255, 255, 0.1);
	text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
}

.desktop-nav :global(a):hover::before {
	opacity: 0.15;
}

.desktop-nav :global(a):hover::after {
	left: 100%;
}

.desktop-nav :global(a.active) {
	color: var(--color-text);
	background: rgba(0, 212, 255, 0.1);
	border-color: rgba(0, 212, 255, 0.3);
	box-shadow: 
		0 4px 15px rgba(0, 212, 255, 0.15),
		inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

.desktop-nav :global(a.active)::before {
	opacity: 0.2;
}

.mobile-nav {
	display: none;
}

@media (max-width: 768px) {
	.nav-container {
		padding: 0 1rem;
	}
	
	.desktop-nav {
		display: none;
	}
	
	.mobile-nav {
		display: block;
	}
	
	.site-title {
		font-size: 1.4rem;
	}
	
	.tagline {
		font-size: 0.65rem;
	}
}

/* Enhanced glassmorphism for modern browsers */
@supports (backdrop-filter: blur(24px)) {
	.ai-header {
		background: rgba(10, 10, 11, 0.75);
		backdrop-filter: blur(24px) saturate(180%) contrast(120%);
		-webkit-backdrop-filter: blur(24px) saturate(180%) contrast(120%);
	}
}

/* Fallback for older browsers */
@supports not (backdrop-filter: blur(24px)) {
	.ai-header {
		background: rgba(10, 10, 11, 0.95);
	}
}
</style>