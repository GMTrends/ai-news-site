<style>
	.ai-footer {
		background: linear-gradient(135deg, rgba(10, 10, 11, 0.95) 0%, rgba(26, 26, 27, 0.95) 100%);
		backdrop-filter: blur(20px);
		border-top: 1px solid rgba(0, 212, 255, 0.2);
		color: var(--color-text-secondary);
		position: relative;
		overflow: hidden;
	}
	
	.ai-footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, 
			rgba(0, 212, 255, 0.02) 0%, 
			rgba(0, 102, 255, 0.02) 50%, 
			rgba(168, 85, 247, 0.02) 100%
		);
		pointer-events: none;
	}
	
	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
		position: relative;
		z-index: 1;
	}
	
	.footer-main {
		display: grid;
		grid-template-columns: 3fr 1fr 1fr 1fr;
		gap: 3rem;
		padding: 3rem 0 2rem;
	}
	
	.footer-section {
		display: flex;
		flex-direction: column;
	}
	
	.footer-brand {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}
	
	.footer-title {
		font-size: 1.5rem;
		font-weight: 700;
		margin: 0;
		background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	
	.footer-tagline {
		font-size: 0.9rem;
		line-height: 1.5;
		margin: 0;
		color: var(--color-text-secondary);
	}
	
	.newsletter-section {
		background: rgba(0, 212, 255, 0.05);
		border: 1px solid rgba(0, 212, 255, 0.2);
		border-radius: 12px;
		padding: 1.5rem;
		margin: 0.5rem 0;
		max-width: 85%;
	}
	
	.newsletter-header {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 0.5rem;
	}
	
	.newsletter-icon {
		font-size: 1.2rem;
	}
	
	.newsletter-title {
		font-size: 1rem;
		font-weight: 600;
		margin: 0;
		color: #ffffff;
	}
	
	.newsletter-description {
		font-size: 0.85rem;
		line-height: 1.4;
		margin: 0 0 1rem 0;
		color: #b3b3b3;
	}
	
	.newsletter-form {
		margin: 0;
	}
	
	.email-input-group {
		display: flex;
		gap: 0.5rem;
	}
	
	.newsletter-input {
		flex: 1;
		padding: 0.75rem;
		border: 1px solid rgba(255, 255, 255, 0.2);
		border-radius: 8px;
		background: rgba(255, 255, 255, 0.05);
		color: #ffffff;
		font-size: 0.9rem;
		transition: all 0.3s ease;
	}
	
	.newsletter-input::placeholder {
		color: #666666;
	}
	
	.newsletter-input:focus {
		outline: none;
		border-color: #00d4ff;
		background: rgba(255, 255, 255, 0.1);
		box-shadow: 0 0 0 2px rgba(0, 212, 255, 0.2);
	}
	
	.newsletter-button {
		padding: 0.75rem 1.25rem;
		background: linear-gradient(135deg, #00d4ff 0%, #0066ff 100%);
		border: none;
		border-radius: 8px;
		color: #ffffff;
		font-size: 0.9rem;
		font-weight: 600;
		cursor: pointer;
		transition: all 0.3s ease;
		white-space: nowrap;
	}
	
	.newsletter-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(0, 212, 255, 0.3);
	}
	
	.footer-social {
		display: flex;
		gap: 0.75rem;
		margin-top: 0.5rem;
	}
	
	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 32px;
		height: 32px;
		background: rgba(0, 212, 255, 0.1);
		border: 1px solid rgba(0, 212, 255, 0.2);
		border-radius: 6px;
		color: #00d4ff;
		text-decoration: none;
		transition: all 0.3s ease;
	}
	
	.social-link:hover {
		background: rgba(0, 212, 255, 0.2);
		border-color: rgba(0, 212, 255, 0.4);
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(0, 212, 255, 0.2);
	}
	
	.footer-heading {
		font-size: 1.1rem;
		font-weight: 600;
		margin: 0 0 1rem;
		color: var(--color-text);
	}
	
	.footer-links {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}
	
	.footer-links li {
		margin: 0;
	}
	
	.footer-links a {
		color: var(--color-text-secondary);
		text-decoration: none;
		font-size: 0.9rem;
		transition: all 0.3s ease;
		padding: 0.25rem 0;
		display: inline-block;
	}
	
	.footer-links a:hover {
		color: #00d4ff;
		transform: translateX(4px);
	}
	
	.footer-bottom {
		border-top: 1px solid rgba(0, 212, 255, 0.1);
		padding: 2rem 0;
	}
	
	.footer-bottom-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 2rem;
	}
	
	.copyright {
		font-size: 0.9rem;
		margin: 0;
		color: var(--color-text-secondary);
	}
	
	.footer-note {
		font-size: 0.8rem;
		margin: 0;
		color: var(--color-text-secondary);
		opacity: 0.8;
		text-align: right;
	}
	
	/* Responsive Design */
	@media (max-width: 768px) {
		.footer-main {
			grid-template-columns: 1fr;
			gap: 2rem;
			padding: 2rem 0 1rem;
		}
		
		.newsletter-section {
			margin: 0.75rem 0;
		}
		
		.email-input-group {
			flex-direction: column;
			gap: 0.75rem;
		}
		
		.newsletter-button {
			width: 100%;
		}
		
		.footer-bottom-content {
			flex-direction: column;
			text-align: center;
			gap: 1rem;
		}
		
		.footer-note {
			text-align: center;
		}
		
		.footer-content {
			padding: 0 1rem;
		}
	}
	
	@media (max-width: 480px) {
		.footer-social {
			justify-content: center;
		}
		
		.footer-links {
			text-align: center;
		}
	}
	
	.footer-title a {
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-decoration: none;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		display: inline-block;
		text-shadow: 0 0 40px rgba(0, 212, 255, 0.5);
		filter: drop-shadow(0 0 8px rgba(0, 212, 255, 0.3));
	}
	.footer-title a::before {
		content: '';
		position: absolute;
		top: -2px;
		left: -2px;
		right: -2px;
		bottom: -2px;
		background: var(--gradient-primary);
		opacity: 0;
		filter: blur(8px);
		transition: opacity 0.4s ease;
		z-index: -1;
	}
	.footer-title a:hover {
		transform: translateY(-2px) scale(1.02);
		filter:
			drop-shadow(0 4px 20px rgba(0, 212, 255, 0.4))
			brightness(1.3)
			saturate(1.2);
		text-shadow: 0 0 20px rgba(255, 255, 255, 0.8);
	}
	.footer-title a:hover::before {
		opacity: 0.15;
	}
</style>
