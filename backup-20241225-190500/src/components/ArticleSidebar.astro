<aside class="article-right-sidebar">
  <div class="sidebar-section sidebar-search">
    <SearchBar compact={true} />
  </div>

  <!-- First Image Box -->
  <div class="ad-space">
    <div class="ad-placeholder">
      <img src="https://via.placeholder.com/300x250" alt="Ad Placeholder 1" class="ad-image" />
    </div>
  </div>

  <div class="sidebar-section sidebar-related">
    <h3 class="sidebar-title">Related in {categorySlug.charAt(0).toUpperCase() + categorySlug.slice(1)}</h3>
    <div class="related-list">
      {filteredArticles.length === 0 && <div class="no-related">No related articles found.</div>}
      {filteredArticles.map((article: any) => (
        <a href={`/${categorySlug}/${article.slug}`} class="related-article">
          <div class="related-thumb">
            {article.featuredImage ? (
              <picture>
                <source 
                  srcset={generateResponsiveSrcSet(article.featuredImage, [100, 150, 200])} 
                  type="image/webp" 
                  sizes="(max-width: 768px) 100vw, 54px"
                >
