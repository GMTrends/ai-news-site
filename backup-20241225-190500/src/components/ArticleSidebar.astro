                  srcset={generateResponsiveSrcSet(article.featuredImage.replace('fm=webp', 'fm=jpg'), [100, 150, 200])} 
                  type="image/jpeg" 
                  sizes="(max-width: 768px) 100vw, 54px"
                >
                <img 
                  src={generateWebPUrl(article.featuredImage, 54, 54)} 
                  alt={article.title}
                  width="54"
                  height="54"
                  loading="lazy"
                  decoding="async"
                />
              </picture>
            ) : (
              <div class="thumb-placeholder">üì∞</div>
